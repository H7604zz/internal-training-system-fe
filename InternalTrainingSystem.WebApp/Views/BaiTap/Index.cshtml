@using InternalTrainingSystem.WebApp.Constants
@model List<InternalTrainingSystem.WebApp.Models.DTOs.AssignmentDto>

@{
    ViewData["Title"] = "Danh Sách Bài Tập";
    var classId = ViewBag.ClassId;
    var className = ViewBag.ClassName;
    var isMentor = ViewBag.IsMentor;
}

@section Styles {
    <link rel="stylesheet" href="~/css/bai-tap.css" asp-append-version="true" />
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-tasks me-2"></i>Danh Sách Bài Tập
                    </h2>
                    <p class="text-muted mb-0">Lớp: <strong>@className</strong></p>
                </div>
                <div>
                    <a href="@Url.Action("ChiTiet", "LopHoc", new { id = classId })" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                    @if (isMentor)
                    {
                        <a href="@Url.Action("TaoMoi", "BaiTap", new { classId })" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Tạo Bài Tập Mới
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Assignment List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var assignment in Model.OrderByDescending(a => a.CreatedAt))
            {
                var isOverdue = assignment.DueAt < DateTime.Now;
                var daysLeft = (assignment.DueAt - DateTime.Now).Days;

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card assignment-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">
                                    <a href="@Url.Action("ChiTiet", "BaiTap", new { classId, assignmentId = assignment.AssignmentId })" 
                                       class="text-decoration-none text-primary">
                                        @assignment.Title
                                    </a>
                                </h5>
                                @if (isMentor)
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-link text-secondary" type="button" 
                                                data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" 
                                                   href="@Url.Action("Sua", "BaiTap", new { classId, assignmentId = assignment.AssignmentId })">
                                                    <i class="fas fa-edit me-2"></i>Sửa
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" 
                                                   href="@Url.Action("DanhSachBaiNop", "BaiTap", new { assignmentId = assignment.AssignmentId })">
                                                    <i class="fas fa-list me-2"></i>Xem Bài Nộp
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" href="#" 
                                                   onclick="deleteAssignment(@classId, @assignment.AssignmentId); return false;">
                                                    <i class="fas fa-trash me-2"></i>Xóa
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(assignment.Description))
                            {
                                <p class="card-text text-muted small mb-3">
                                    @(assignment.Description.Length > 100 
                                        ? assignment.Description.Substring(0, 100) + "..." 
                                        : assignment.Description)
                                </p>
                            }

                            <div class="assignment-meta">
                                <div class="mb-2">
                                    <i class="fas fa-calendar-alt me-2 text-secondary"></i>
                                    <small>Hạn nộp: <strong>@assignment.DueAt.ToString("dd/MM/yyyy HH:mm")</strong></small>
                                </div>

                                @if (isOverdue)
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Quá hạn
                                    </span>
                                }
                                else if (daysLeft <= 3)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-clock me-1"></i>Còn @daysLeft ngày
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Còn @daysLeft ngày
                                    </span>
                                }

                                @if (!string.IsNullOrEmpty(assignment.AttachmentFileName))
                                {
                                    <span class="badge bg-info ms-2">
                                        <i class="fas fa-paperclip me-1"></i>Có file đính kèm
                                    </span>
                                }
                            </div>

                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    Tạo: @assignment.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("ChiTiet", "BaiTap", new { classId, assignmentId = assignment.AssignmentId })" 
                               class="btn btn-sm btn-outline-primary w-100">
                                <i class="fas fa-eye me-2"></i>Xem Chi Tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-tasks fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Chưa có bài tập nào</h4>
            @if (isMentor)
            {
                <p class="text-muted">Hãy tạo bài tập đầu tiên cho lớp học này</p>
                <a href="@Url.Action("TaoMoi", "BaiTap", new { classId })" class="btn btn-primary mt-3">
                    <i class="fas fa-plus me-2"></i>Tạo Bài Tập Mới
                </a>
            }
            else
            {
                <p class="text-muted">Mentor chưa tạo bài tập nào cho lớp học này</p>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/bai-tap.js" asp-append-version="true"></script>
}
