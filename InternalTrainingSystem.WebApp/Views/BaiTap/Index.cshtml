@using InternalTrainingSystem.WebApp.Constants
@model InternalTrainingSystem.WebApp.Models.DTOs.AssignmentDto?

@{
    ViewData["Title"] = "Bài Tập Cuối Kỳ";
    var classId = ViewBag.ClassId;
    var className = ViewBag.ClassName;
    var isMentor = User.IsInRole(UserRoles.Mentor);
}

@section Styles {
    <link rel="stylesheet" href="~/css/bai-tap.css" asp-append-version="true" />
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-tasks me-2"></i>Bài Tập Cuối Kỳ
                    </h2>
                    <p class="text-muted mb-0">Lớp: <strong>@className</strong></p>
                </div>
                <div>
                    <a href="@Url.Action("ChiTiet", "LopHoc", new { id = classId })" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                    @if (isMentor && Model == null)
                    {
                        <a href="@Url.Action("TaoMoi", "BaiTap", new { classId })" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Tạo Bài Tập Cuối Kỳ
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Assignment Detail -->
    @if (Model != null)
    {
        var assignment = Model;
        var isOverdue = assignment.DueAt < DateTime.Now;
        var daysLeft = (assignment.DueAt - DateTime.Now).Days;
        var totalSubmissions = assignment.Submissions?.Count ?? 0;

        <!-- Assignment Information Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card assignment-detail-card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-file-alt me-2"></i>@assignment.Title
                        </h4>
                        @if (isMentor)
                        {
                            <div class="btn-group">
                                <a href="@Url.Action("Sua", "BaiTap", new { classId, assignmentId = assignment.AssignmentId })"
                                   class="btn btn-sm btn-light">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </a>
                                <button type="button" class="btn btn-sm btn-danger"
                                        onclick="deleteAssignment(@classId, @assignment.AssignmentId)">
                                    <i class="fas fa-trash me-1"></i>Xóa
                                </button>
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="text-muted mb-3">Mô tả</h5>
                                <p class="mb-3">@(assignment.Description ?? "Không có mô tả")</p>

                                @if (!string.IsNullOrEmpty(assignment.AttachmentUrl))
                                {
                                    <div class="attachment-box">
                                        <i class="fas fa-paperclip me-2"></i>
                                        <strong>File đính kèm:</strong>
                                        <a href="@assignment.AttachmentUrl" target="_blank" class="ms-2">
                                            @(assignment.AttachmentFileName ?? "Tải file")
                                            <i class="fas fa-external-link-alt ms-1"></i>
                                        </a>
                                        @if (assignment.AttachmentSizeBytes.HasValue)
                                        {
                                            <span class="text-muted ms-2">
                                                (@((assignment.AttachmentSizeBytes.Value / 1024.0).ToString("N2")) KB)
                                            </span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-muted mb-3">
                                            <i class="fas fa-info-circle me-2"></i>Thông tin
                                        </h6>
                                        @if (assignment.StartAt.HasValue)
                                        {
                                            <p class="mb-2">
                                                <i class="fas fa-calendar-plus text-success me-2"></i>
                                                <strong>Bắt đầu:</strong><br/>
                                                <span class="ms-4">@assignment.StartAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                            </p>
                                        }
                                        <p class="mb-2">
                                            <i class="fas fa-calendar-times text-danger me-2"></i>
                                            <strong>Hạn nộp:</strong><br/>
                                            <span class="ms-4">@assignment.DueAt.ToString("dd/MM/yyyy HH:mm")</span>
                                        </p>
                                        <hr/>
                                        @if (isOverdue)
                                        {
                                            <span class="badge bg-danger w-100 py-2">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Đã quá hạn
                                            </span>
                                        }
                                        else if (daysLeft <= 3)
                                        {
                                            <span class="badge bg-warning text-dark w-100 py-2">
                                                <i class="fas fa-clock me-1"></i>Còn @daysLeft ngày
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success w-100 py-2">
                                                <i class="fas fa-check me-1"></i>Còn @daysLeft ngày
                                            </span>
                                        }

                                        @if (isMentor)
                                        {
                                            <hr/>
                                            <div class="text-center">
                                                <p class="mb-1"><i class="fas fa-users me-2"></i><strong>Thống kê nộp bài</strong></p>
                                                <h3 class="text-primary mb-0">@totalSubmissions</h3>
                                                <small class="text-muted">bài nộp</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submissions List (Mentor Only) -->
        @if (isMentor && assignment.Submissions != null && assignment.Submissions.Any())
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>Danh Sách Bài Nộp
                                <span class="badge bg-primary ms-2">@totalSubmissions</span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 submission-table">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 10%">#</th>
                                            <th style="width: 20%">Mã NV</th>
                                            <th style="width: 30%">Tên nhân viên</th>
                                            <th style="width: 20%">Bài nộp</th>
                                            <th style="width: 20%">Thời gian nộp</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var (submission, index) in assignment.Submissions.Select((s, i) => (s, i + 1)))
                                        {
                                            <tr style="cursor: pointer;" >
                                                <td>@index</td>
                                                <td>
                                                    <strong>@submission.EmployeeId</strong>
                                                </td>
                                                <td>@submission.FullName</td>
                                                <td>
                                                    <a href="#" onclick="downloadFile('@submission.PublicUrl', 'bai-lam-@submission.EmployeeId'); return false;" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-download me-1"></i>Tải xuống bài làm
                                                    </a>
                                                </td>
                                                <td>
                                                    <small>@submission.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (isMentor && (assignment.Submissions == null || !assignment.Submissions.Any()))
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có bài nộp nào</h5>
                            <p class="text-muted">Sinh viên chưa nộp bài tập này</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Submit Button for Staff -->
        @if (!isMentor)
        {
            <div class="row mt-4">
                <div class="col-12 text-center">
                    @if (!isOverdue)
                    {
                        <button type="button" class="btn btn-lg btn-primary" data-bs-toggle="modal" data-bs-target="#submitModal">
                            <i class="fas fa-upload me-2"></i>Nộp Bài Tập
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-danger d-inline-block">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Đã hết hạn nộp bài
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-tasks fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Chưa có bài tập cuối kỳ</h4>
            @if (isMentor)
            {
                <p class="text-muted">Hãy tạo bài tập cuối kỳ cho lớp học này</p>
                <a href="@Url.Action("TaoMoi", "BaiTap", new { classId })" class="btn btn-primary mt-3">
                    <i class="fas fa-plus me-2"></i>Tạo Bài Tập Cuối Kỳ
                </a>
            }
            else
            {
                <p class="text-muted">Mentor chưa tạo bài tập cuối kỳ cho lớp học này</p>
            }
        </div>
    }
</div>

<!-- Submit Modal (for Staff) -->
@if (!isMentor && Model != null)
{
    <div class="modal fade" id="submitModal" tabindex="-1" aria-labelledby="submitModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="submitModalLabel">
                        <i class="fas fa-upload me-2"></i>Nộp Bài Tập
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="submitAssignmentForm" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="info-notice">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Lưu ý:</strong> Kích thước file tối đa 100MB
                        </div>
                        
                        <div class="mb-3">
                            <label for="submissionFile" class="form-label">
                                <i class="fas fa-file me-2"></i>Chọn file nộp bài <span class="text-danger">*</span>
                            </label>
                            <input type="file" class="form-control" id="submissionFile" name="File" required>
                            <small class="text-muted">Chấp nhận tất cả các loại file</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="submit" class="btn btn-primary" id="btnSubmit">
                            <i class="fas fa-upload me-2"></i>Nộp Bài
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Anti-forgery token for AJAX calls -->
@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/js/bai-tap.js" asp-append-version="true"></script>
    @if (!isMentor && Model != null)
    {
        <script>
            $(document).ready(function() {
                initSubmitAssignmentForm(@Model.AssignmentId, @classId);
            });
        </script>
    }
    <script>
        function downloadFile(url, filename) {
            // Create a temporary anchor element
            const link = document.createElement('a');
            link.href = url;
            link.download = filename || 'bai-lam';
            link.target = '_blank';
            
            // For cross-origin files, this will open in new tab
            // To force download, you need server-side proxy or proper CORS headers
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
}
