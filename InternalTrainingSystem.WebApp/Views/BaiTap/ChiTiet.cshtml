@using InternalTrainingSystem.WebApp.Constants
@model InternalTrainingSystem.WebApp.Models.DTOs.AssignmentDto

@{
    ViewData["Title"] = "Chi Tiết Bài Tập";
    var isMentor = ViewBag.IsMentor;
    var classId = ViewBag.ClassId;
    var isOverdue = Model.DueAt < DateTime.Now;
}

@section Styles {
    <link rel="stylesheet" href="~/css/bai-tap.css" asp-append-version="true" />
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-file-alt me-2"></i>Chi Tiết Bài Tập
                    </h2>
                    <p class="text-muted mb-0">Lớp: <strong>@Model.ClassName</strong></p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "BaiTap", new { classId })" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                    @if (isMentor)
                    {
                        <a href="@Url.Action("Sua", "BaiTap", new { classId, assignmentId = Model.AssignmentId })" 
                           class="btn btn-primary me-2">
                            <i class="fas fa-edit me-2"></i>Sửa Bài Tập
                        </a>
                        <a href="@Url.Action("DanhSachBaiNop", "BaiTap", new { assignmentId = Model.AssignmentId })" 
                           class="btn btn-info">
                            <i class="fas fa-list me-2"></i>Xem Bài Nộp
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Assignment Details -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title mb-4">@Model.Title</h3>

                    <!-- Status & Due Date -->
                    <div class="mb-4">
                        @if (isOverdue)
                        {
                            <span class="badge bg-danger fs-6 me-2">
                                <i class="fas fa-exclamation-triangle me-1"></i>Quá hạn
                            </span>
                        }
                        else
                        {
                            var daysLeft = (Model.DueAt - DateTime.Now).Days;
                            if (daysLeft <= 3)
                            {
                                <span class="badge bg-warning text-dark fs-6 me-2">
                                    <i class="fas fa-clock me-1"></i>Còn @daysLeft ngày
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6 me-2">
                                    <i class="fas fa-check me-1"></i>Còn @daysLeft ngày
                                </span>
                            }
                        }
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5 class="text-secondary mb-3">
                                <i class="fas fa-align-left me-2"></i>Mô Tả
                            </h5>
                            <div class="description-content">
                                @Html.Raw(Model.Description.Replace("\n", "<br/>"))
                            </div>
                        </div>
                    }

                    <!-- Attachment -->
                    @if (!string.IsNullOrEmpty(Model.AttachmentUrl))
                    {
                        <div class="mb-4">
                            <h5 class="text-secondary mb-3">
                                <i class="fas fa-paperclip me-2"></i>File Đính Kèm
                            </h5>
                            <div class="attachment-box">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-file fa-2x text-primary me-3"></i>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">@Model.AttachmentFileName</div>
                                        @if (Model.AttachmentSizeBytes.HasValue)
                                        {
                                            <small class="text-muted">
                                                @(Model.AttachmentSizeBytes.Value / 1024.0 / 1024.0).ToString("0.##") MB
                                            </small>
                                        }
                                    </div>
                                    <a href="@Model.AttachmentUrl" class="btn btn-outline-primary" target="_blank" download>
                                        <i class="fas fa-download me-2"></i>Tải Xuống
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Submit Assignment (Staff Only) -->
            @if (!isMentor)
            {
                <div class="card mt-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-upload me-2"></i>Nộp Bài Tập
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="submitAssignmentForm" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label for="submissionFile" class="form-label">
                                    <i class="fas fa-file me-2"></i>Chọn File <span class="text-danger">*</span>
                                </label>
                                <input type="file" class="form-control" id="submissionFile" name="File" required>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Kích thước tối đa: 100MB
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="submissionNote" class="form-label">
                                    <i class="fas fa-comment me-2"></i>Ghi Chú
                                </label>
                                <textarea class="form-control" id="submissionNote" name="Note" rows="3" 
                                          placeholder="Nhập ghi chú cho bài nộp (nếu có)..."></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary w-100" id="btnSubmit">
                                <i class="fas fa-upload me-2"></i>Nộp Bài
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar Info -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông Tin
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-hashtag me-2"></i>ID:
                            </td>
                            <td class="text-end fw-bold">#@Model.AssignmentId</td>
                        </tr>
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-calendar-plus me-2"></i>Ngày Tạo:
                            </td>
                            <td class="text-end">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-calendar-check me-2"></i>Hạn Nộp:
                            </td>
                            <td class="text-end">
                                <strong class="@(isOverdue ? "text-danger" : "text-success")">
                                    @Model.DueAt.ToString("dd/MM/yyyy HH:mm")
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-class me-2"></i>Lớp:
                            </td>
                            <td class="text-end">@Model.ClassName</td>
                        </tr>
                    </table>
                </div>
            </div>

            @if (isOverdue)
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Lưu Ý:</strong> Bài tập này đã quá hạn nộp.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/bai-tap.js" asp-append-version="true"></script>
    @if (!isMentor)
    {
        <script>
            $(document).ready(function() {
                initSubmitAssignmentForm(@Model.AssignmentId, @classId);
            });
        </script>
    }
}
