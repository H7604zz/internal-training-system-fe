@model InternalTrainingSystem.WebApp.Models.DTOs.AssignmentSubmissionDetailDto

@{
    ViewData["Title"] = "Chi Tiết Bài Nộp";
    var isMentor = ViewBag.IsMentor;
    var assignmentId = ViewBag.AssignmentId;
}

@section Styles {
    <link rel="stylesheet" href="~/css/bai-tap.css" asp-append-version="true" />
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-file-alt me-2"></i>Chi Tiết Bài Nộp
                    </h2>
                    <p class="text-muted mb-0">Bài tập: <strong>@Model.AssignmentTitle</strong></p>
                </div>
                <div>
                    <button onclick="history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Submission Details -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-body">
                    <!-- Student Info -->
                    <div class="mb-4 pb-4 border-bottom">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-user me-2"></i>Thông Tin Nhân Viên
                        </h5>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-circle fa-4x text-secondary me-3"></i>
                            <div>
                                <h5 class="mb-1">@Model.EmployeeName</h5>
                                <p class="text-muted mb-0">
                                    <small>ID: @Model.EmployeeId</small><br>
                                    <small><i class="fas fa-envelope me-1"></i>@Model.EmployeeEmail</small>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Submission Info -->
                    <div class="mb-4 pb-4 border-bottom">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-info-circle me-2"></i>Thông Tin Bài Nộp
                        </h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-clock text-muted me-2"></i>
                                    <strong>Thời gian nộp:</strong>
                                    <p class="mb-0">@Model.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-flag text-muted me-2"></i>
                                    <strong>Trạng thái:</strong>
                                    <p class="mb-0">
                                        @if (Model.IsLate)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Nộp muộn
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Đúng hạn
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Note))
                        {
                            <div class="alert alert-info">
                                <strong><i class="fas fa-comment me-2"></i>Ghi chú:</strong>
                                <p class="mb-0 mt-2">@Model.Note</p>
                            </div>
                        }
                    </div>

                    <!-- Submitted File -->
                    <div class="mb-4">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-paperclip me-2"></i>File Đã Nộp
                        </h5>
                        <div class="attachment-box">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-file fa-3x text-primary me-3"></i>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@Model.FileName</h6>
                                    @if (Model.FileSizeBytes.HasValue)
                                    {
                                        <small class="text-muted">
                                            Kích thước: @((Model.FileSizeBytes.Value / 1024.0 / 1024.0).ToString("0.##")) MB
                                        </small>
                                    }
                                </div>
                                <a href="@Model.FileUrl" class="btn btn-primary" target="_blank" download>
                                    <i class="fas fa-download me-2"></i>Tải Xuống
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Grading Section (Mentor Only) -->
                    @if (isMentor && !Model.Score.HasValue)
                    {
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="text-secondary mb-3">
                                    <i class="fas fa-star me-2"></i>Chấm Điểm
                                </h5>
                                <form id="gradeFormInline">
                                    <div class="mb-3">
                                        <label for="scoreInput" class="form-label">
                                            Điểm <span class="text-danger">*</span>
                                        </label>
                                        <input type="number" class="form-control" id="scoreInput" 
                                               min="0" max="10" step="0.1" required
                                               placeholder="Nhập điểm từ 0 đến 10">
                                    </div>

                                    <div class="mb-3">
                                        <label for="feedbackInput" class="form-label">Nhận Xét</label>
                                        <textarea class="form-control" id="feedbackInput" rows="4"
                                                  placeholder="Nhập nhận xét về bài làm của học viên..."></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-save me-2"></i>Lưu Điểm
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Grade Info -->
            @if (Model.Score.HasValue)
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-star me-2"></i>Kết Quả
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="grade-display mb-3">
                            <h1 class="display-3 text-success mb-0">@Model.Score.Value.ToString("0.##")</h1>
                            <p class="text-muted">/ 10 điểm</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Feedback))
                        {
                            <div class="alert alert-light text-start">
                                <strong><i class="fas fa-comment me-2"></i>Nhận xét:</strong>
                                <p class="mb-0 mt-2">@Model.Feedback</p>
                            </div>
                        }

                        @if (Model.GradedAt.HasValue)
                        {
                            <div class="text-muted mt-3">
                                <small>
                                    <i class="fas fa-clock me-1"></i>
                                    Chấm lúc: @Model.GradedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                </small>
                                @if (!string.IsNullOrEmpty(Model.GradedByName))
                                {
                                    <br>
                                    <small>
                                        <i class="fas fa-user me-1"></i>
                                        Người chấm: @Model.GradedByName
                                    </small>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-hourglass-half me-2"></i>
                    <strong>Chưa chấm điểm</strong>
                    <p class="mb-0 mt-2">Bài nộp này chưa được chấm điểm.</p>
                </div>
            }

            <!-- Submission Summary -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Tóm Tắt
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-hashtag me-2"></i>ID Bài nộp:
                            </td>
                            <td class="text-end fw-bold">#@Model.SubmissionId</td>
                        </tr>
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-tasks me-2"></i>Bài tập:
                            </td>
                            <td class="text-end">@Model.AssignmentTitle</td>
                        </tr>
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-user me-2"></i>Nhân viên:
                            </td>
                            <td class="text-end">@Model.EmployeeName</td>
                        </tr>
                        <tr>
                            <td class="text-muted">
                                <i class="fas fa-clock me-2"></i>Nộp lúc:
                            </td>
                            <td class="text-end">@Model.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/bai-tap.js" asp-append-version="true"></script>
    @if (isMentor && !Model.Score.HasValue)
    {
        <script>
            $(document).ready(function() {
                $('#gradeFormInline').on('submit', function(e) {
                    e.preventDefault();
                    var score = $('#scoreInput').val();
                    var feedback = $('#feedbackInput').val();
                    
                    if (!score) {
                        alert('Vui lòng nhập điểm!');
                        return;
                    }
                    
                    gradeSubmission(@assignmentId, @Model.SubmissionId, score, feedback);
                });
            });
        </script>
    }
}
