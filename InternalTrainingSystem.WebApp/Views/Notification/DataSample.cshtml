@{
    ViewData["Title"] = "Dữ liệu mẫu thông báo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-database me-2"></i>
                        Dữ liệu mẫu thông báo (Data Sample)
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Thông tin:</strong> Đây là danh sách tất cả dữ liệu mẫu được sử dụng trong hệ thống thông báo.
                        Hiện tại có <strong>15 thông báo mẫu</strong> với <strong>5 thông báo chưa đọc</strong>.
                    </div>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-play-circle fs-2 mb-2"></i>
                                    <h5>Bắt đầu khóa học</h5>
                                    <h3 id="start-count">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-bell fs-2 mb-2"></i>
                                    <h5>Nhắc nhở</h5>
                                    <h3 id="reminder-count">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-user-check fs-2 mb-2"></i>
                                    <h5>Xác nhận</h5>
                                    <h3 id="confirm-count">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-certificate fs-2 mb-2"></i>
                                    <h5>Chứng chỉ</h5>
                                    <h3 id="cert-count">-</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mb-3">
                        <button class="btn btn-primary me-2" onclick="loadSampleData()">
                            <i class="fas fa-sync-alt me-1"></i>Tải dữ liệu mẫu
                        </button>
                        <button class="btn btn-success me-2" onclick="createRandomNotification()">
                            <i class="fas fa-plus me-1"></i>Tạo thông báo ngẫu nhiên
                        </button>
                        <button class="btn btn-info me-2" onclick="showUnreadOnly()">
                            <i class="fas fa-filter me-1"></i>Chỉ hiện chưa đọc
                        </button>
                        <button class="btn btn-secondary" onclick="showAllNotifications()">
                            <i class="fas fa-list me-1"></i>Hiện tất cả
                        </button>
                    </div>

                    <!-- Notifications List -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Loại</th>
                                    <th>Tiêu đề</th>
                                    <th>Nội dung</th>
                                    <th>Thời gian</th>
                                    <th>Trạng thái</th>
                                    <th>Link</th>
                                </tr>
                            </thead>
                            <tbody id="notifications-table-body">
                                <tr>
                                    <td colspan="7" class="text-center">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Đang tải...</span>
                                        </div>
                                        <div class="mt-2">Đang tải dữ liệu...</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
let allNotifications = [];

document.addEventListener('DOMContentLoaded', function() {
    loadSampleData();
});

function loadSampleData() {
    fetch('@Url.Action("GetUserNotifications", "Notification")?pageSize=50')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                allNotifications = data.notifications;
                displayNotificationsTable(allNotifications);
                updateStatistics(allNotifications);
            } else {
                console.error('Error loading notifications:', data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
}

function displayNotificationsTable(notifications) {
    const tbody = document.getElementById('notifications-table-body');
    
    if (!notifications || notifications.length === 0) {
        tbody.innerHTML = `
            <tr>
                <td colspan="7" class="text-center text-muted">Không có dữ liệu</td>
            </tr>
        `;
        return;
    }
    
    let html = '';
    notifications.forEach(notification => {
        const statusBadge = notification.isRead 
            ? '<span class="badge bg-secondary">Đã đọc</span>'
            : '<span class="badge bg-primary">Chưa đọc</span>';
            
        const timeAgo = formatTimeAgo(notification.createdAt);
        
        html += `
            <tr class="${!notification.isRead ? 'table-info' : ''}">
                <td>${notification.id}</td>
                <td>
                    <i class="${notification.icon} me-1"></i>
                    ${notification.title}
                </td>
                <td><strong>${notification.title}</strong></td>
                <td class="text-truncate" style="max-width: 300px;" title="${notification.message}">
                    ${notification.message}
                </td>
                <td>${timeAgo}</td>
                <td>${statusBadge}</td>
                <td>
                    <a href="${notification.link || '#'}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-external-link-alt"></i>
                    </a>
                </td>
            </tr>
        `;
    });
    
    tbody.innerHTML = html;
}

function updateStatistics(notifications) {
    const stats = {
        start: 0,
        reminder: 0,
        confirm: 0,
        certificate: 0,
        finish: 0
    };
    
    notifications.forEach(n => {
        switch(n.type) {
            case 1: stats.start++; break;
            case 2: stats.reminder++; break;
            case 3: stats.finish++; break;
            case 4: stats.confirm++; break;
            case 5: stats.certificate++; break;
        }
    });
    
    document.getElementById('start-count').textContent = stats.start;
    document.getElementById('reminder-count').textContent = stats.reminder;
    document.getElementById('confirm-count').textContent = stats.confirm;
    document.getElementById('cert-count').textContent = stats.certificate;
}

function createRandomNotification() {
    const types = ['start', 'reminder', 'finish', 'certificate', 'staffconfirm'];
    const randomType = types[Math.floor(Math.random() * types.length)];
    
    fetch('@Url.Action("CreateSampleNotification", "Notification")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ type: randomType })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showAlert('Tạo thông báo mới thành công!', 'success');
            loadSampleData(); // Reload data
        } else {
            showAlert('Lỗi: ' + data.message, 'danger');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showAlert('Có lỗi xảy ra', 'danger');
    });
}

function showUnreadOnly() {
    const unreadNotifications = allNotifications.filter(n => !n.isRead);
    displayNotificationsTable(unreadNotifications);
}

function showAllNotifications() {
    displayNotificationsTable(allNotifications);
}

function formatTimeAgo(dateString) {
    const date = new Date(dateString);
    const now = new Date();
    const diff = now - date;
    
    if (diff < 60000) {
        return 'Vừa xong';
    } else if (diff < 3600000) {
        const minutes = Math.floor(diff / 60000);
        return `${minutes} phút trước`;
    } else if (diff < 86400000) {
        const hours = Math.floor(diff / 3600000);
        return `${hours} giờ trước`;
    } else {
        const days = Math.floor(diff / 86400000);
        return `${days} ngày trước`;
    }
}

function showAlert(message, type) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
    alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    document.body.appendChild(alertDiv);
    
    setTimeout(() => {
        if (alertDiv.parentElement) {
            alertDiv.remove();
        }
    }, 3000);
}
</script>