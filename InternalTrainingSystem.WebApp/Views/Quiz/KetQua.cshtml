@{
    ViewData["Title"] = "Kết Quả Bài Kiểm Tra";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3><i class="fas fa-check-circle me-2"></i>Hoàn Thành Bài Kiểm Tra</h3>
                </div>
                <div class="card-body text-center">
                    <div class="result-summary mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="stat-item">
                                    <h2 class="text-success">8/10</h2>
                                    <p class="text-muted">Câu đúng</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-item">
                                    <h2 class="text-primary">80%</h2>
                                    <p class="text-muted">Điểm số</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-item">
                                    <h2 class="text-info">45:30</h2>
                                    <p class="text-muted">Thời gian</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="progress mb-4" style="height: 20px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 80%">
                            80% - Giỏi
                        </div>
                    </div>

                    <div class="result-message mb-4">
                        <h4 class="text-success">Chúc mừng! Bạn đã hoàn thành xuất sắc!</h4>
                        <p class="text-muted">Bạn đã đạt kết quả tốt trong bài kiểm tra này.</p>
                    </div>

                    <div class="action-buttons">
                        <a asp-action="DanhSachBaiQuiz" class="btn btn-primary me-2">
                            <i class="fas fa-list me-1"></i>Danh Sách Bài Kiểm Tra
                        </a>
                        <a href="#" class="btn btn-success">
                            <i class="fas fa-download me-1"></i>Tải Kết Quả
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-4 shadow">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar me-2"></i>Chi Tiết Kết Quả</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <strong>Tên bài kiểm tra:</strong>
                                <span>Bài Kiểm Tra Lập Trình C#</span>
                            </div>
                            <div class="detail-item">
                                <strong>Ngày thực hiện:</strong>
                                <span>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="detail-item">
                                <strong>Tổng số câu hỏi:</strong>
                                <span>10 câu</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <strong>Câu trả lời đúng:</strong>
                                <span class="text-success">8 câu</span>
                            </div>
                            <div class="detail-item">
                                <strong>Câu trả lời sai:</strong>
                                <span class="text-danger">2 câu</span>
                            </div>
                            <div class="detail-item">
                                <strong>Xếp loại:</strong>
                                <span class="badge bg-success">Giỏi</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.stat-item {
    padding: 20px;
    margin: 10px 0;
}

.stat-item h2 {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 5px;
}

.detail-item {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
}

.detail-item:last-child {
    border-bottom: none;
}

.result-message {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    border-left: 4px solid #28a745;
}
</style>