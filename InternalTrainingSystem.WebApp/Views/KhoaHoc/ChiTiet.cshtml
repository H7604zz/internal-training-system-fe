@model InternalTrainingSystem.WebApp.Models.DTOs.CourseDto
@{
    ViewData["Title"] = $"Chi Tiết Khóa Học - {Model.CourseName}";
}

@section Styles {
    <link rel="stylesheet" href="~/css/khoa-hoc.css" asp-append-version="true" />
}

<div class="course-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="course-detail-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="header-content">
                        <div class="d-flex align-items-center mb-2">
                            <h1 class="course-detail-title">@Model.CourseName</h1>
                            <span class="course-code ms-3">@Model.Code</span>
                            <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive") ms-3">
                                <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-pause-circle") me-1"></i>
                                @Model.StatusDisplay
                            </span>
                        </div>
                        <div class="course-meta-inline">
                            <span class="meta-item">
                                <i class="fas fa-tag"></i>
                                @Model.CategoryName
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-clock"></i>
                                @Model.DurationDisplay
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-signal"></i>
                                <span class="level-badge @(Model.Level.ToLower() switch 
                                {
                                    "cơ bản" => "level-basic",
                                    "trung cấp" => "level-intermediate", 
                                    "nâng cao" => "level-advanced",
                                    _ => "level-basic"
                                })">@Model.Level</span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <div class="action-buttons">
                        <a href="@Url.Action("ChinhSua", new { id = Model.CourseId })" class="btn btn-edit-main">
                            <i class="fas fa-edit me-2"></i>Chỉnh Sửa
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-back">
                            <i class="fas fa-arrow-left me-2"></i>Quay Lại
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course Detail Content -->
        <div class="row">
            <!-- Main Info -->
            <div class="col-lg-8 mb-4">
                <div class="course-detail-card">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Thông Tin Chi Tiết
                    </h3>
                    
                    <div class="detail-section">
                        <h4 class="subsection-title">Mô tả khóa học</h4>
                        <div class="description-content">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p>@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có mô tả chi tiết cho khóa học này.</p>
                            }
                        </div>
                    </div>

                    <div class="detail-section">
                        <h4 class="subsection-title">Thông tin cơ bản</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <label>Mã khóa học:</label>
                                <span>@Model.Code</span>
                            </div>
                            <div class="info-item">
                                <label>Danh mục:</label>
                                <span>@Model.CategoryName</span>
                            </div>
                            <div class="info-item">
                                <label>Thời lượng:</label>
                                <span>@Model.DurationDisplay</span>
                            </div>
                            <div class="info-item">
                                <label>Cấp độ:</label>
                                <span class="level-badge @(Model.Level.ToLower() switch 
                                {
                                    "cơ bản" => "level-basic",
                                    "trung cấp" => "level-intermediate", 
                                    "nâng cao" => "level-advanced",
                                    _ => "level-basic"
                                })">@Model.Level</span>
                            </div>
                            <div class="info-item">
                                <label>Trạng thái:</label>
                                <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive")">
                                    @Model.StatusDisplay
                                </span>
                            </div>
                            <div class="info-item">
                                <label>Ngày tạo:</label>
                                <span>@(Model.CreatedDate.ToString("dd/MM/yyyy") ?? "Không xác định")</span>
                            </div>
                        </div>
                    </div>

                    @if (Model.Departments != null && Model.Departments.Any())
                    {
                        <div class="detail-section">
                            <h4 class="subsection-title">Phòng ban áp dụng</h4>
                            <div class="departments-detail">
                                @foreach (var dept in Model.Departments)
                                {
                                    <span class="department-tag">
                                        <i class="fas fa-building me-1"></i>
                                        @dept.Name
                                    </span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Side Info -->
            <div class="col-lg-4 mb-4">
                <!-- Quick Stats -->
                <div class="course-detail-card">
                    <h3 class="section-title">
                        <i class="fas fa-chart-bar me-2"></i>Thống Kê
                    </h3>
                    <div class="stats-list">
                        <div class="stat-item">
                            <div class="stat-label">
                                <i class="fas fa-users"></i>
                                Số học viên đã tham gia:
                            </div>
                            <div class="stat-value">45 người</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">
                                <i class="fas fa-calendar-alt"></i>
                                Lớp học đang mở:
                            </div>
                            <div class="stat-value">3 lớp</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">
                                <i class="fas fa-star"></i>
                                Đánh giá trung bình:
                            </div>
                            <div class="stat-value">4.5/5.0</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">
                                <i class="fas fa-percentage"></i>
                                Tỷ lệ hoàn thành:
                            </div>
                            <div class="stat-value">85%</div>
                        </div>
                    </div>
                </div>

                <!-- Course Actions -->
                <div class="course-detail-card">
                    <h3 class="section-title">
                        <i class="fas fa-cogs me-2"></i>Hành Động
                    </h3>
                    <div class="action-list">
                        <a href="#" class="action-link">
                            <i class="fas fa-plus-circle"></i>
                            Tạo lớp học mới
                        </a>
                        <a href="#" class="action-link">
                            <i class="fas fa-users"></i>
                            Xem danh sách học viên
                        </a>
                        <a href="#" class="action-link">
                            <i class="fas fa-chart-line"></i>
                            Xem báo cáo tiến độ
                        </a>
                        <a href="#" class="action-link">
                            <i class="fas fa-download"></i>
                            Xuất báo cáo
                        </a>
                    </div>
                </div>

                <!-- Recent Activities -->
                <div class="course-detail-card">
                    <h3 class="section-title">
                        <i class="fas fa-history me-2"></i>Hoạt Động Gần Đây
                    </h3>
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="activity-content">
                                <div class="activity-text">Có 5 học viên mới đăng ký</div>
                                <div class="activity-time">2 giờ trước</div>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-edit"></i>
                            </div>
                            <div class="activity-content">
                                <div class="activity-text">Nội dung khóa học được cập nhật</div>
                                <div class="activity-time">1 ngày trước</div>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div class="activity-content">
                                <div class="activity-text">Lớp học mới được lên lịch</div>
                                <div class="activity-time">3 ngày trước</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>