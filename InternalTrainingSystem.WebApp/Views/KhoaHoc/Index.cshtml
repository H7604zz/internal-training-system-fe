@model List<InternalTrainingSystem.WebApp.Models.DTOs.CourseDto>
@using InternalTrainingSystem.WebApp.Constants
@using InternalTrainingSystem.WebApp.Extensions
@{
    ViewData["Title"] = "Danh Sách Khóa Học";
}

@section Styles {
    <link rel="stylesheet" href="~/css/khoa-hoc.css" asp-append-version="true" />
}

<div class="course-container">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="fas fa-graduation-cap me-3"></i>Danh Sách Khóa Học
                    </h1>
                    <p class="page-subtitle">Quản lý và theo dõi các khóa học đào tạo nội bộ</p>
                </div>
                @if (User.IsInRole(UserRoles.TrainingDepartment))
                {
                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <a href="@Url.Action("TaoMoi")" class="add-course-btn">
                            <i class="fas fa-plus"></i>
                            Thêm Khóa Học
                        </a>
                    </div>
                }
            </div>
        </div>

       
        <!-- Filter Section -->
        <div class="filter-section">
            <h5 class="filter-title">
                <i class="fas fa-filter me-2"></i>Lọc Theo Trạng Thái
            </h5>
            
            <!-- Status Tabs -->
            <ul class="nav nav-tabs status-tabs" id="statusTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(string.IsNullOrEmpty(ViewBag.Status) ? "active" : "")" 
                       href="@Url.Action("Index", new { status = "", page = 1 })" 
                       role="tab">
                        <i class="fas fa-list me-2"></i>Tất cả
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(ViewBag.Status == CourseStatus.Pending ? "active" : "")" 
                       href="@Url.Action("Index", new { status = CourseStatus.Pending, page = 1 })" 
                       role="tab">
                        <i class="fas fa-clock me-2"></i>Chờ phê duyệt
                        
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(ViewBag.Status == CourseStatus.Approved ? "active" : "")" 
                       href="@Url.Action("Index", new { status = CourseStatus.Approved, page = 1 })" 
                       role="tab">
                        <i class="fas fa-check-circle me-2"></i>Đã phê duyệt
                        
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(ViewBag.Status == CourseStatus.Rejected ? "active" : "")" 
                       href="@Url.Action("Index", new { status = CourseStatus.Rejected, page = 1 })" 
                       role="tab">
                        <i class="fas fa-times-circle me-2"></i>Bị từ chối
                        
                    </a>
                </li>
            </ul>
        </div>

        <!-- Course Table -->
        <div class="table-container">
            <div class="table-responsive">
                <table class="table course-table">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 40%;">Khóa học</th>
                            <th scope="col" style="width: 12%;">Hình thức</th>
                            <th scope="col" style="width: 12%;">Cấp độ</th>
                            <th scope="col" style="width: 15%;">Trạng thái</th>
                            <th scope="col" class="text-center" style="width: 21%;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var course in Model)
                            {
                                <tr class="course-row">
                                    <td>
                                        <div class="course-info">
                                            <h6 class="course-name mb-1">@course.CourseName</h6>
                                            <small class="course-code text-muted">@course.Code</small>
                                            <div class="course-description-short mt-1">
                                                @if (course.Description?.Length > 80)
                                                {
                                                    <span>@course.Description.Substring(0, 80)...</span>
                                                }
                                                else
                                                {
                                                    <span>@course.Description</span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (course.IsOnline)
                                        {
                                            <span class="badge bg-info text-white">
                                                <i class="fas fa-laptop me-1"></i>Trực tuyến
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-chalkboard-teacher me-1"></i>Trực tiếp
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="level-badge @course.Level.GetLevelBadgeClass()">
                                            @course.Level.GetLevelDisplay()
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge @(course.Status?.ToLower() switch
                                        {
                                            "pending" => "status-pending",
                                            "approved" => "status-approved",
                                            "rejected" => "status-rejected",
                                            _ => "status-pending"
                                        })">
                                            <i class="fas @(course.Status?.ToLower() switch
                                            {
                                                "pending" => "fa-clock",
                                                "approved" => "fa-check-circle",
                                                "rejected" => "fa-times-circle",
                                                _ => "fa-clock"
                                            }) me-1"></i>
                                            @(course.Status?.ToLower() switch
                                            {
                                                "pending" => "Chờ phê duyệt",
                                                "approved" => "Đã phê duyệt",
                                                "rejected" => "Bị từ chối",
                                                _ => "Chờ phê duyệt"
                                            })
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a href="@Url.Action("ChiTiet", new { id = course.CourseId })" 
                                               class="btn btn-sm btn-outline-primary me-1" 
                                               title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (course.Status.IsApproved() && User.IsInRole(UserRoles.DirectManager))
                                            {
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-success me-1"
                                                        title="Danh sách nhân viên"
                                                        onclick="goToEmployeeList(@course.CourseId)">
                                                    <i class="fas fa-users"></i>
                                                </button>
                                            }
                                            @if (course.Status.IsApproved() && User.IsInRole(UserRoles.TrainingDepartment))
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-success me-1" 
                                                        title="Danh sách nhân viên"
                                                        onclick="goToEmployeeListAndSendNotification(@course.CourseId)">
                                                    <i class="fas fa-users"></i>
                                                </button>
                                            }
                                            @if (course.Status.IsPending() && User.IsInRole(UserRoles.BoardOfDirectors))
                                            {
                                                <a href="@Url.Action("PheDuyet", new { id = course.CourseId })" 
                                                   class="btn btn-sm btn-outline-warning" 
                                                   title="Phê duyệt">
                                                    <i class="fas fa-clipboard-check"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="fas fa-graduation-cap text-muted mb-3" style="font-size: 3rem;"></i>
                                        <h5 class="text-muted">Không có khóa học nào</h5>
                                        <p class="text-muted">Hiện tại chưa có khóa học nào phù hợp với bộ lọc của bạn.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages >= 1)
        {
            @await Html.PartialAsync("_Pagination", new InternalTrainingSystem.WebApp.Models.ViewModels.PaginationViewModel(
                ViewBag.CurrentPage ?? 1,
                ViewBag.TotalPages ?? 1,
                ViewBag.PageSize ?? InternalTrainingSystem.WebApp.Constants.PaginationConstants.CoursePageSize,
                "Index",
                "KhoaHoc",
                new Dictionary<string, object>
                {
                    ["status"] = ViewBag.Status ?? ""
                }
            ) { AriaLabel = "Phân trang khóa học", TotalItems = ViewBag.TotalItems })
        }
    </div>
</div>

@section Scripts {
    <script>
        async function goToEmployeeList(courseId) {
            try {
                // Hiển thị loading
                const button = event.target.closest('button');
                const originalHtml = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                button.disabled = true;

                const employeeListUrl = '@Url.Action("DanhSachNhanVien", "KhoaHoc", new { id = "__COURSEID__" })'.replace('__COURSEID__', courseId);
                window.location.href = employeeListUrl;

            } catch (error) {
                console.error('Error:', error);
                // Vẫn chuyển trang dù có lỗi
                const employeeListUrl = '@Url.Action("DanhSachNhanVien", "KhoaHoc", new { id = "__COURSEID__" })'.replace('__COURSEID__', courseId);
                window.location.href = employeeListUrl;
            }
        }

        async function goToEmployeeListAndSendNotification(courseId) {
            try {
                // Hiển thị loading
                const button = event.target.closest('button');
                const originalHtml = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                button.disabled = true;

                // Gửi thông báo trước
                const notificationUrl = '@Url.Action("GuiThongBaoNhanVien", "KhoaHoc", new { courseId = "__COURSEID__" })'.replace('__COURSEID__', courseId);
                const response = await fetch(notificationUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                // Sau đó chuyển đến trang danh sách nhân viên
                const employeeListUrl = '@Url.Action("DanhSachNhanVien", "KhoaHoc", new { id = "__COURSEID__" })'.replace('__COURSEID__', courseId);
                window.location.href = employeeListUrl;
                
            } catch (error) {
                console.error('Error:', error);
                // Vẫn chuyển trang dù có lỗi
                const employeeListUrl = '@Url.Action("DanhSachNhanVien", "KhoaHoc", new { id = "__COURSEID__" })'.replace('__COURSEID__', courseId);
                window.location.href = employeeListUrl;
            }
        }
    </script>
}
