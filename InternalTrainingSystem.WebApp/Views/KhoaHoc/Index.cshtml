@model List<InternalTrainingSystem.WebApp.Models.DTOs.CourseDto>
@using InternalTrainingSystem.WebApp.Constants
@using InternalTrainingSystem.WebApp.Extensions
@{
    ViewData["Title"] = "Danh Sách Khóa Học";
}

@section Styles {
    <link rel="stylesheet" href="~/css/khoa-hoc.css" asp-append-version="true" />
}

<div class="course-container">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="fas fa-graduation-cap me-3"></i>Danh Sách Khóa Học
                    </h1>
                    <p class="page-subtitle">Quản lý và theo dõi các khóa học đào tạo nội bộ</p>
                </div>
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a href="@Url.Action("TaoMoi")" class="add-course-btn">
                        <i class="fas fa-plus"></i>
                        Thêm Khóa Học
                    </a>
                </div>
            </div>
        </div>

       
        <!-- Filter Section -->
        <div class="filter-section">
            <h5 class="filter-title">
                <i class="fas fa-filter me-2"></i>Bộ Lọc & Tìm Kiếm
            </h5>
            <form method="get" class="filter-form">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tìm kiếm khóa học</label>
                        <input type="text" class="form-control" name="searchTerm" 
                               value="@ViewBag.SearchTerm" placeholder="Nhập tên khóa học...">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Trạng thái</label>
                        <select class="form-select" name="status">
                            <option value="">Tất cả trạng thái</option>
                            <option value="@CourseStatus.Pending" selected="@(ViewBag.Status ==  CourseStatus.Pending)">Chờ phê duyệt</option>
                            <option value="@CourseStatus.Approved" selected="@(ViewBag.Status == CourseStatus.Approved)">Đã phê duyệt</option>
                            <option value="@CourseStatus.Rejected" selected="@(ViewBag.Status == CourseStatus.Rejected)">Bị từ chối</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn filter-btn flex-fill">
                                <i class="fas fa-search me-2"></i>Lọc
                            </button>
                            <a href="@Url.Action("Index")" class="btn reset-btn flex-fill">
                                <i class="fas fa-undo me-2"></i>Reset
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Course Table -->
        <div class="table-container">
            <div class="table-responsive">
                <table class="table course-table">
                    <thead>
                        <tr>
                            <th scope="col">Khóa học</th>
                            <th scope="col">Cấp độ</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var course in Model)
                            {
                                <tr class="course-row">
                                    <td>
                                        <div class="course-info">
                                            <h6 class="course-name mb-1">@course.CourseName</h6>
                                            <small class="course-code text-muted">@course.Code</small>
                                            <div class="course-description-short mt-1">
                                                @if (course.Description?.Length > 80)
                                                {
                                                    <span>@course.Description.Substring(0, 80)...</span>
                                                }
                                                else
                                                {
                                                    <span>@course.Description</span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="level-badge @course.Level.GetLevelBadgeClass()">
                                            @course.Level.GetLevelDisplay()
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge @(course.Status?.ToLower() switch
                                        {
                                            "pending" => "status-pending",
                                            "approved" => "status-approved",
                                            "rejected" => "status-rejected",
                                            _ => "status-pending"
                                        })">
                                            <i class="fas @(course.Status?.ToLower() switch
                                            {
                                                "pending" => "fa-clock",
                                                "approved" => "fa-check-circle",
                                                "rejected" => "fa-times-circle",
                                                _ => "fa-clock"
                                            }) me-1"></i>
                                            @(course.Status?.ToLower() switch
                                            {
                                                "pending" => "Chờ phê duyệt",
                                                "approved" => "Đã phê duyệt",
                                                "rejected" => "Bị từ chối",
                                                _ => "Chờ phê duyệt"
                                            })
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a href="@Url.Action("ChiTiet", new { id = course.CourseId })" 
                                               class="btn btn-sm btn-outline-primary me-1" 
                                               title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (course.Status.IsApproved())
                                            {
                                                <a href="@Url.Action("DanhSachNhanVien", new { id = course.CourseId })" 
                                                   class="btn btn-sm btn-outline-success me-1" 
                                                   title="Danh sách nhân viên">
                                                    <i class="fas fa-users"></i>
                                                </a>
                                            }
                                            @if (course.Status.IsPending())
                                            {
                                                <a href="@Url.Action("PheDuyet", new { id = course.CourseId })" 
                                                   class="btn btn-sm btn-outline-warning" 
                                                   title="Phê duyệt">
                                                    <i class="fas fa-clipboard-check"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="fas fa-graduation-cap text-muted mb-3" style="font-size: 3rem;"></i>
                                        <h5 class="text-muted">Không có khóa học nào</h5>
                                        <p class="text-muted">Hiện tại chưa có khóa học nào phù hợp với bộ lọc của bạn.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages >= 1)
        {
            @await Html.PartialAsync("_Pagination", new InternalTrainingSystem.WebApp.Models.ViewModels.PaginationViewModel(
                ViewBag.CurrentPage ?? 1,
                ViewBag.TotalPages ?? 1,
                ViewBag.PageSize ?? InternalTrainingSystem.WebApp.Constants.PaginationConstants.CoursePageSize,
                "Index",
                "KhoaHoc",
                new Dictionary<string, object>
                {
                    ["searchTerm"] = ViewBag.SearchTerm ?? "",
                    ["status"] = ViewBag.Status ?? ""
                }
            ) { AriaLabel = "Phân trang khóa học", TotalItems = ViewBag.TotalItems })
        }
    </div>
</div>
