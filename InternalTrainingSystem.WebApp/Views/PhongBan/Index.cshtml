@model PagedResult<InternalTrainingSystem.WebApp.Models.DTOs.DepartmnentViewDto>
@using InternalTrainingSystem.WebApp.Models
@using InternalTrainingSystem.WebApp.Models.DTOs
@{
    ViewData["Title"] = "Quản Lý Phòng Ban";
}

@section Styles {
    <link rel="stylesheet" href="~/css/department.css" asp-append-version="true" />
}

<div class="department-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title">
                        <i class="fas fa-building me-3"></i>Quản Lý Phòng Ban
                    </h1>
                    <p class="page-subtitle">Quản lý thông tin các phòng ban trong công ty</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="@Url.Action("TaoMoi")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Thêm Phòng Ban
                    </a>
                </div>
            </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="filter-section">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" name="search" class="form-control" 
                                       placeholder="Tìm kiếm theo tên phòng ban..." 
                                       value="@ViewData["CurrentSearch"]">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-outline-primary me-2">
                                <i class="fas fa-search me-1"></i>Tìm Kiếm
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-redo me-1"></i>Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Results Section -->
        <div class="results-section">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Danh Sách Phòng Ban
                        </h5>
                        <span class="badge bg-primary">Tổng: @Model.TotalCount phòng ban</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tên Phòng Ban</th>
                                        <th>Mô Tả</th>
                                        <th class="text-center">Nhân Viên</th>
                                        <th class="text-center">Khóa Học</th>
                                        <th class="text-center">Ngày Tạo</th>
                                        <th class="text-center">Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var department in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="department-info">
                                                    <h6 class="mb-1">@department.DepartmentName</h6>
                                                    <small class="text-muted">ID: @department.DepartmentId</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="description-text">
                                                    @(string.IsNullOrEmpty(department.Description) ? "Chưa có mô tả" : 
                                                      (department.Description.Length > 100 ? department.Description.Substring(0, 100) + "..." : department.Description))
                                                </span>
                                            </td>
                   
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("ChiTiet", new { id = department.DepartmentId })" 
                                                       class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("ChinhSua", new { id = department.DepartmentId })" 
                                                       class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            title="Xóa" onclick="confirmDelete(@department.DepartmentId, '@department.DepartmentName')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination -->
                        @await Html.PartialAsync("_Pagination", Model)
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-building fa-3x text-muted mb-3"></i>
                            <h5>Không tìm thấy phòng ban nào</h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"]?.ToString()))
                                {
                                    <span>Không có kết quả cho từ khóa "<strong>@ViewData["CurrentSearch"]</strong>"</span>
                                }
                                else
                                {
                                    <span>Hệ thống chưa có phòng ban nào được tạo</span>
                                }
                            </p>
                            <a href="@Url.Action("TaoMoi")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Tạo Phòng Ban Đầu Tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Xác Nhận Xóa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa phòng ban <strong id="departmentNameToDelete"></strong>?</p>
                <p class="text-danger">
                    <i class="fas fa-warning me-1"></i>
                    Hành động này không thể hoàn tác!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Hủy
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(departmentId, departmentName) {
            document.getElementById('departmentNameToDelete').textContent = departmentName;
            document.getElementById('deleteForm').action = '@Url.Action("Xoa")/' + departmentId;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
        
        // Auto hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}