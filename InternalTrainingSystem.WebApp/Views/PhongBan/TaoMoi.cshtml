@model CreateDepartmentDto
@using InternalTrainingSystem.WebApp.Models.DTOs
@{
    ViewData["Title"] = "Tạo Phòng Ban Mới";
}

@section Styles {
    <link rel="stylesheet" href="~/css/department.css" asp-append-version="true" />
}

<div class="department-create-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index")">
                                    <i class="fas fa-building me-1"></i>Phòng Ban
                                </a>
                            </li>
                            <li class="breadcrumb-item active">Tạo Mới</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">
                        <i class="fas fa-plus-circle me-3"></i>Tạo Phòng Ban Mới
                    </h1>
                    <p class="page-subtitle">Thêm phòng ban mới vào hệ thống</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-building me-2"></i>Thông Tin Phòng Ban
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="TaoMoi" method="post" novalidate>
                            @Html.AntiForgeryToken()
                            
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <h6><i class="fas fa-exclamation-circle me-2"></i>Có lỗi xảy ra:</h6>
                                    <div asp-validation-summary="All" class="mb-0"></div>
                                </div>
                            }

                            <div class="row">
                                <div class="col-12 mb-4">
                                    <label asp-for="Name" class="form-label required">
                                        <i class="fas fa-building me-1"></i>Tên Phòng Ban
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" 
                                           placeholder="Nhập tên phòng ban (ví dụ: Phòng Công Nghệ Thông Tin)">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Tên phòng ban nên rõ ràng và dễ hiểu, không quá 200 ký tự
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <label asp-for="Description" class="form-label">
                                        <i class="fas fa-align-left me-1"></i>Mô Tả Phòng Ban
                                    </label>
                                    <textarea asp-for="Description" class="form-control" rows="5" 
                                              placeholder="Nhập mô tả chi tiết về chức năng, nhiệm vụ của phòng ban..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Mô tả giúp làm rõ chức năng và nhiệm vụ của phòng ban (tối đa 1000 ký tự)
                                    </div>
                                </div>
                            </div>

                            <!-- Form Actions -->
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary btn-lg w-100">
                                            <i class="fas fa-save me-2"></i>Tạo Phòng Ban
                                        </button>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg w-100">
                                            <i class="fas fa-times me-2"></i>Hủy Bỏ
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Help Card -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-question-circle me-2"></i>Hướng Dẫn
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="help-list">
                            <div class="help-item">
                                <i class="fas fa-lightbulb text-warning"></i>
                                <span>Tên phòng ban nên rõ ràng và phản ánh đúng chức năng của phòng ban</span>
                            </div>
                            <div class="help-item">
                                <i class="fas fa-lightbulb text-warning"></i>
                                <span>Mô tả chi tiết giúp nhân viên hiểu rõ hơn về vai trò của phòng ban</span>
                            </div>
                            <div class="help-item">
                                <i class="fas fa-lightbulb text-warning"></i>
                                <span>Sau khi tạo phòng ban, bạn có thể thêm nhân viên và phân công khóa học</span>
                            </div>
                            <div class="help-item">
                                <i class="fas fa-lightbulb text-warning"></i>
                                <span>Thông tin phòng ban có thể được chỉnh sửa sau khi tạo</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Character counter for department name
            $('#Name').on('input', function() {
                const maxLength = 200;
                const currentLength = $(this).val().length;
                const remaining = maxLength - currentLength;
                
                if (remaining < 20) {
                    $(this).next('.text-danger').after(`<small class="text-muted char-counter">Còn lại: ${remaining} ký tự</small>`);
                } else {
                    $('.char-counter').remove();
                }
            });

            // Character counter for description
            $('#Description').on('input', function() {
                const maxLength = 500;
                const currentLength = $(this).val().length;
                const remaining = maxLength - currentLength;
                
                $('.desc-counter').remove();
                if (currentLength > 0) {
                    $(this).after(`<small class="text-muted desc-counter">${currentLength}/${maxLength} ký tự</small>`);
                }
                
                if (remaining < 50 && remaining >= 0) {
                    $('.desc-counter').addClass('text-warning');
                } else if (remaining < 0) {
                    $('.desc-counter').addClass('text-danger');
                }
            });

            // Form validation enhancement
            $('form').on('submit', function(e) {
                const departmentName = $('#Name').val().trim();
                
                if (departmentName.length < 3) {
                    e.preventDefault();
                    $('#Name').addClass('is-invalid');
                    if ($('#Name').next('.invalid-feedback').length === 0) {
                        $('#Name').after('<div class="invalid-feedback">Tên phòng ban phải có ít nhất 3 ký tự</div>');
                    }
                    return false;
                }
            });

            // Remove validation class on input
            $('.form-control').on('input', function() {
                $(this).removeClass('is-invalid');
                $(this).next('.invalid-feedback').remove();
            });
        });
    </script>
}