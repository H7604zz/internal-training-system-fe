@model InternalTrainingSystem.WebApp.Models.DTOs.DepartmentDetailDto
@using InternalTrainingSystem.WebApp.Models.DTOs
@{
    ViewData["Title"] = "Chi Tiết Phòng Ban - " + Model.DepartmentName;
}

@section Styles {
    <link rel="stylesheet" href="~/css/department.css" asp-append-version="true" />
}

<div class="department-detail-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index")">
                                    <i class="fas fa-building me-1"></i>Phòng Ban
                                </a>
                            </li>
                            <li class="breadcrumb-item active">Chi Tiết</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">
                        <i class="fas fa-info-circle me-3"></i>@Model.DepartmentName
                    </h1>
                    <p class="page-subtitle">Thông tin chi tiết phòng ban và danh sách nhân viên</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="@Url.Action("ChinhSua", new { id = Model.DepartmentId })" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-2"></i>Chỉnh Sửa
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Department Info Card -->
            <div class="col-lg-4 mb-4">
                <div class="card department-info-card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-building me-2"></i>Thông Tin Phòng Ban
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <label>ID Phòng Ban:</label>
                            <span class="badge bg-primary">#@Model.DepartmentId</span>
                        </div>
                        
                        <div class="info-item">
                            <label>Tên Phòng Ban:</label>
                            <span class="fw-bold">@Model.DepartmentName</span>
                        </div>
                        
                        <div class="info-item">
                            <label>Mô Tả:</label>
                            <p class="description">
                                @(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả" : Model.Description)
                            </p>
                        </div>
                        
                        <div class="info-item">
                            <label>Thống kê:</label>
                            <div class="stat-item">
                                <i class="fas fa-users text-primary"></i>
                                <span><strong>@(Model.UserDetail?.Count ?? 0)</strong> Nhân viên</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employees Section -->
            <div class="col-lg-8 mb-4">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-users me-2"></i>Danh Sách Nhân Viên
                            </h5>
                            <span class="badge bg-info">@(Model.UserDetail?.Count ?? 0) người</span>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.UserDetail != null && Model.UserDetail.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 10%;">Mã NV</th>
                                            <th style="width: 20%;">Họ và Tên</th>
                                            <th style="width: 25%;">Email</th>
                                            <th style="width: 15%;">Chức vụ</th>
                                            <th style="width: 15%;">Vai trò</th>
                                            <th style="width: 15%;" class="text-center">Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model.UserDetail)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-secondary">@(user.EmployeeId ?? "N/A")</span>
                                                </td>
                                                <td>
                                                    <strong>@user.FullName</strong>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <i class="fas fa-envelope me-1"></i>@user.Email
                                                    </small>
                                                </td>
                                                <td>@(user.Position ?? "Chưa xác định")</td>
                                                <td>
                                                    <span class="badge bg-info">@(user.CurrentRole ?? "User")</span>
                                                </td>
                                                <td class="text-center">
                                                    @if (user.IsActive)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle"></i> Hoạt động
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-times-circle"></i> Không hoạt động
                                                        </span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <h5>Chưa có nhân viên nào</h5>
                                <p class="text-muted">Phòng ban này hiện chưa có nhân viên</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Tooltip initialization
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
