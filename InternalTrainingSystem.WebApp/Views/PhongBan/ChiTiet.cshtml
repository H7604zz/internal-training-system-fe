@model InternalTrainingSystem.WebApp.Models.DTOs.DepartmentDetailDto
@using InternalTrainingSystem.WebApp.Helpers
@using InternalTrainingSystem.WebApp.Models.DTOs
@using InternalTrainingSystem.WebApp.Models.ViewModels
@{
    ViewData["Title"] = "Chi Tiết Phòng Ban - " + Model.DepartmentName;
}

@section Styles {
    <link rel="stylesheet" href="~/css/department.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
}

@Html.AntiForgeryToken()

<div class="department-detail-container">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="fas fa-info-circle me-3"></i>@Model.DepartmentName
                    </h1>
                    <p class="page-subtitle">Thông tin chi tiết phòng ban và danh sách nhân viên</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="@Url.Action("ChinhSua", new { id = Model.DepartmentId })" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-2"></i>Chỉnh Sửa
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Department Info Card -->
            <div class="col-lg-3 mb-4">
                <div class="card department-info-card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-building me-2"></i>Thông Tin Phòng Ban
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <label>ID Phòng Ban:</label>
                            <span class="badge bg-primary">#@Model.DepartmentId</span>
                        </div>
                        
                        <div class="info-item">
                            <label>Tên Phòng Ban:</label>
                            <span class="fw-bold">@Model.DepartmentName</span>
                        </div>
                        
                        <div class="info-item">
                            <label>Mô Tả:</label>
                            <p class="description">
                                @(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả" : Model.Description)
                            </p>
                        </div>
                        
                        <div class="info-item">
                            <label>Thống kê:</label>
                            <div class="stat-item">
                                <i class="fas fa-users text-primary"></i>
                                <span><strong>@(Model.UserDetail?.TotalCount ?? 0)</strong> Nhân viên</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employees Section -->
            <div class="col-lg-9 mb-4">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-users me-2"></i>Danh Sách Nhân Viên
                            </h5>
                            <span class="badge bg-info">@(Model.UserDetail?.TotalCount ?? 0) người</span>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.UserDetail != null && Model.UserDetail.Items != null && Model.UserDetail.Items.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 15%;">Mã NV</th>
                                            <th style="width: 25%;">Họ và Tên</th>
                                            <th style="width: 25%;">Email</th>
                                            <th style="width: 15%;">Chức vụ</th>
                                            <th style="width: 10%;" class="text-center">Trạng thái</th>
                                            <th style="width: 10%;" class="text-center">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model.UserDetail.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-secondary">@(user.EmployeeId ?? "N/A")</span>
                                                </td>
                                                <td>
                                                    <strong>@user.FullName</strong>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        @user.Email
                                                    </small>
                                                </td>
                                                <td>@(user.Position ?? "N/A")</td>
                                                <td class="text-center">
                                                    @if (user.IsActive)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle"></i> Hoạt động
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-times-circle"></i> Không hoạt động
                                                        </span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <button type="button" class="btn btn-sm btn-primary" 
                                                            onclick="openTransferModal('@user.Id', '@user.FullName')"
                                                            title="Chuyển phòng ban">
                                                        <i class="fas fa-exchange-alt"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            @* Pagination *@
                            @if (Model.UserDetail.TotalPages > 1)
                            {
                                @await Html.PartialAsync("_Pagination", new PaginationViewModel
                                {
                                    CurrentPage = Model.UserDetail.Page,
                                    TotalPages = Model.UserDetail.TotalPages,
                                    PageSize = Model.UserDetail.PageSize,
                                    TotalItems = Model.UserDetail.TotalCount,
                                    ActionName = "ChiTiet",
                                    ControllerName = "PhongBan",
                                    RouteValues = new Dictionary<string, object> { { "id", Model.DepartmentId } }
                                })
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <h5>Chưa có nhân viên nào</h5>
                                <p class="text-muted">Phòng ban này hiện chưa có nhân viên</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transfer Employee Modal -->
<div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transferModalLabel">
                    <i class="fas fa-exchange-alt me-2"></i>Chuyển Nhân Viên
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="transferForm">
                    <input type="hidden" id="transferUserId" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nhân viên:</label>
                        <p id="transferUserName" class="text-muted"></p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Phòng ban hiện tại:</label>
                        <p class="text-muted">@Model.DepartmentName</p>
                    </div>
                    
                    <div class="mb-3">
                        <label for="targetDepartmentSelect" class="form-label fw-bold">
                            Chuyển đến phòng ban: <span class="text-danger">*</span>
                        </label>
                        <select class="form-select" id="targetDepartmentSelect" required>
                            <option value="">-- Chọn phòng ban --</option>
                        </select>
                        <div class="invalid-feedback">
                            Vui lòng chọn phòng ban đích.
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Hủy
                </button>
                <button type="button" class="btn btn-primary" onclick="confirmTransfer()">
                    <i class="fas fa-check me-2"></i>Xác nhận chuyển
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let allDepartments = [];
        
        $(document).ready(function() {
            // Tooltip initialization
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Load departments for transfer
            loadDepartments();
        });
        
        async function loadDepartments() {
            try {
                const response = await fetch('@Utilities.GetAbsoluteUrl("api/department")', {
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                if (response.ok) {
                    allDepartments = await response.json();
                    console.log('Loaded departments:', allDepartments);
                } else {
                    console.error('Failed to load departments:', response.status);
                }
            } catch (error) {
                console.error('Error loading departments:', error);
            }
        }
        
        function openTransferModal(userId, userName) {
            document.getElementById('transferUserId').value = userId;
            document.getElementById('transferUserName').textContent = userName;
            
            // Populate department select (exclude current department)
            const select = document.getElementById('targetDepartmentSelect');
            select.innerHTML = '<option value="">-- Chọn phòng ban --</option>';
            
            const currentDeptId = @Model.DepartmentId;
            allDepartments.forEach(dept => {
                if (dept.departmentId !== currentDeptId) {
                    const option = document.createElement('option');
                    option.value = dept.departmentId;
                    option.textContent = dept.departmentName;
                    select.appendChild(option);
                }
            });
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('transferModal'));
            modal.show();
        }
        
        async function confirmTransfer() {
            const form = document.getElementById('transferForm');
            const userId = document.getElementById('transferUserId').value;
            const targetDepartmentId = document.getElementById('targetDepartmentSelect').value;
            
            // Validate
            if (!targetDepartmentId) {
                document.getElementById('targetDepartmentSelect').classList.add('is-invalid');
                return;
            }
            
            document.getElementById('targetDepartmentSelect').classList.remove('is-invalid');
            
            try {
                const response = await fetch('@Url.Action("ChuyenNhanVien", "PhongBan")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({
                        userId: userId,
                        targetDepartmentId: parseInt(targetDepartmentId)
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('transferModal'));
                    modal.hide();
                    
                    // Show success message
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: result.message || 'Chuyển nhân viên thành công!',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        // Reload page
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: result.message || 'Có lỗi xảy ra khi chuyển nhân viên.',
                        confirmButtonText: 'OK'
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: 'Có lỗi xảy ra khi chuyển nhân viên.',
                    confirmButtonText: 'OK'
                });
            }
        }
    </script>
}
