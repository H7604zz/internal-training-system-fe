@model InternalTrainingSystem.WebApp.Models.ViewModels.CreateClassViewModel
@{
    ViewData["Title"] = "Tạo Lớp Học Mới";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create-class.css" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-plus-circle me-2"></i>Tạo Lớp Học Mới
                </h2>
                <div>
                    <a href="@Url.Action("Index", "LopHoc")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông Tin Lớp Học
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="TaoLop" method="post" id="createClassForm">
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ClassName" class="form-label required">Tên Lớp Học</label>
                                    <input asp-for="ClassName" class="form-control" placeholder="Nhập tên lớp học..." />
                                    <span asp-validation-for="ClassName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CourseId" class="form-label required">Khóa Học</label>
                                    <select asp-for="CourseId" class="form-select">
                                        <option value="">-- Chọn khóa học --</option>
                                        @foreach (var course in Model.Courses)
                                        {
                                            <option value="@course.CourseId">@course.CourseName (@course.Level)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CourseId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="MentorId" class="form-label required">Mentor</label>
                                    <select asp-for="MentorId" class="form-select">
                                        <option value="">-- Chọn mentor --</option>
                                        @foreach (var mentor in Model.Mentors)
                                        {
                                            <option value="@mentor.Id">@mentor.FullName (@mentor.Email)</option>
                                        }
                                    </select>
                                    <span asp-validation-for="MentorId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Capacity" class="form-label required">Sức Chứa</label>
                                    <input asp-for="Capacity" class="form-control" type="number" min="1" max="100" placeholder="Số lượng học viên tối đa..." />
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                    <div class="form-text">Số lượng học viên tối đa từ 1 đến 100</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Mô Tả</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết về lớp học..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="StartDate" class="form-label required">Ngày Bắt Đầu</label>
                                            <input asp-for="StartDate" class="form-control" type="date" />
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="EndDate" class="form-label required">Ngày Kết Thúc</label>
                                            <input asp-for="EndDate" class="form-control" type="date" />
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Schedule Section -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card border-info">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="mb-0">
                                            <i class="fas fa-calendar-alt me-2"></i>Lịch Học
                                            <button type="button" class="btn btn-light btn-sm float-end" id="addScheduleBtn">
                                                <i class="fas fa-plus me-1"></i>Thêm Lịch
                                            </button>
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div id="scheduleContainer">
                                            @if (Model.Schedule != null && Model.Schedule.Any())
                                            {
                                                @for (int i = 0; i < Model.Schedule.Count; i++)
                                                {
                                                    <div class="schedule-item border rounded p-3 mb-3" data-index="@i">
                                                        <div class="row">
                                                            <div class="col-md-3">
                                                                <label class="form-label">Ngày Học</label>
                                                                <input name="Schedule[@i].ClassDate" value="@(Model.Schedule[i].ClassDate?.ToString("yyyy-MM-dd"))" type="date" class="form-control" />
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label class="form-label">Giờ Bắt Đầu</label>
                                                                <input name="Schedule[@i].StartTime" value="@Model.Schedule[i].StartTime.ToString(@"hh\:mm")" type="time" class="form-control" />
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label class="form-label">Giờ Kết Thúc</label>
                                                                <input name="Schedule[@i].EndTime" value="@Model.Schedule[i].EndTime.ToString(@"hh\:mm")" type="time" class="form-control" />
                                                            </div>
                                                            <div class="col-md-2">
                                                                <label class="form-label">Phòng</label>
                                                                <input name="Schedule[@i].Room" value="@Model.Schedule[i].Room" placeholder="Phòng..." class="form-control" />
                                                            </div>
                                                            <div class="col-md-1 d-flex align-items-end">
                                                                <button type="button" class="btn btn-danger btn-sm remove-schedule">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="text-center text-muted py-4" id="emptySchedule">
                                                    <i class="fas fa-calendar-plus fa-3x mb-3"></i>
                                                    <p>Chưa có lịch học nào. Nhấn "Thêm Lịch" để bắt đầu.</p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Index", "LopHoc")" class="btn btn-secondary">
                                        <i class="fas fa-times me-2"></i>Hủy
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save me-2"></i>Tạo Lớp Học
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Schedule Item Template -->
<div id="scheduleTemplate" style="display: none;">
    <div class="schedule-item border rounded p-3 mb-3" data-index="__INDEX__">
        <div class="row">
            <div class="col-md-3">
                <label class="form-label">Ngày Học</label>
                <input name="Schedule[__INDEX__].ClassDate" type="date" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Giờ Bắt Đầu</label>
                <input name="Schedule[__INDEX__].StartTime" type="time" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Giờ Kết Thúc</label>
                <input name="Schedule[__INDEX__].EndTime" type="time" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Phòng</label>
                <input name="Schedule[__INDEX__].Room" placeholder="Phòng..." class="form-control" />
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="button" class="btn btn-danger btn-sm remove-schedule">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/create-class.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}