@using InternalTrainingSystem.WebApp.Constants
@model InternalTrainingSystem.WebApp.Models.DTOs.ClassDetailDto

@{
    ViewData["Title"] = "Chi Tiết Lớp Học - " + Model.ClassName;
}

@section Styles {
    <link rel="stylesheet" href="~/css/lop-hoc.css" />
    <link rel="stylesheet" href="~/css/lop-hoc-chi-tiet.css" asp-append-version="true" />
}

<div class="container-fluid">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-info-circle me-2"></i>Chi Tiết Lớp Học
                    </h2>
                    <p class="text-muted mb-0">Thông tin chi tiết và danh sách nhân viên</p>
                </div>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-secondary back-btn me-2">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                    @if (User.IsInRole(UserRoles.TrainingDepartment))
                    {
                        @if (string.IsNullOrEmpty(Model.MentorName))
                        {
                            <button type="button" class="btn btn-primary" onclick="openSetupClassModal()">
                                <i class="fas fa-cog me-2"></i>Thiết Lập Lớp Học
                            </button>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-check-circle me-1"></i>Đã thiết lập
                            </span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Class Information -->
    <div class="row mb-4">
        <div class="col-md-6 mb-4">
            <div class="card detail-card h-100">
                <div class="detail-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info me-2"></i>Thông Tin Chung
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td class="info-label">ID Lớp:</td>
                            <td class="info-value fw-bold">#@Model.ClassId</td>
                        </tr>
                        <tr>
                            <td class="info-label">Tên Lớp:</td>
                            <td class="info-value">
                                <strong class="text-primary">@Model.ClassName</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="info-label">Khóa Học:</td>
                            <td class="info-value">
                                <span class="text-info fw-semibold">@Model.CourseName</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="info-label">Mentor:</td>
                            <td class="info-value">
                                <i class="fas fa-user-tie me-2 text-secondary"></i>
                                <span class="fw-semibold">@Model.MentorName (@Model.MentorId)</span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card detail-card h-100">
                <div class="detail-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info me-2"></i>Thông Tin Lớp Học
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td class="info-label">Số Lượng Nhân Viên:</td>
                            <td class="info-value">
                                <span class="badge student-count-badge fs-6">
                                    @Model.Employees.Count nhân viên
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="info-label">Trạng Thái:</td>
                            <td class="info-value">
                                <span class="badge status-active fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Hoạt động
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Class Schedule -->
    @if (ViewBag.Schedules != null && ((List<InternalTrainingSystem.WebApp.Models.DTOs.ScheduleItemResponseDto>)ViewBag.Schedules).Any())
    {
        var schedules = (List<InternalTrainingSystem.WebApp.Models.DTOs.ScheduleItemResponseDto>)ViewBag.Schedules;
        var minDate = schedules.Min(s => s.DayOfWeek.Date);
        var maxDate = schedules.Max(s => s.DayOfWeek.Date);
        
        // Tìm tuần đầu tiên (thứ 2)
        var startOfWeek = minDate;
        while (startOfWeek.DayOfWeek != DayOfWeek.Monday)
        {
            startOfWeek = startOfWeek.AddDays(-1);
        }
        
        var weeks = new List<DateTime>();
        var currentWeekStart = startOfWeek;
        while (currentWeekStart <= maxDate)
        {
            weeks.Add(currentWeekStart);
            currentWeekStart = currentWeekStart.AddDays(7);
        }

        <div class="row mb-4">
            <div class="col-12">
                <div class="card detail-card">
                    <div class="detail-header">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>Lịch Học
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <!-- CUSTOM: Thay đổi max-height để điều chỉnh số tuần hiển thị (mỗi tuần ~150px) -->
                        <div class="table-responsive" style="max-height: 450px; overflow-y: auto;">
                            <table class="table table-bordered mb-0" style="font-size: 0.9rem;">
                                <thead class="table-light" style="position: sticky; top: 0; z-index: 10;">
                                    <tr>
                                        <th style="width: 100px;">Tuần</th>
                                        <th>Thứ 2</th>
                                        <th>Thứ 3</th>
                                        <th>Thứ 4</th>
                                        <th>Thứ 5</th>
                                        <th>Thứ 6</th>
                                        <th>Thứ 7</th>
                                        <th>Chủ Nhật</th>
                                    </tr>
                                </thead>
                                <tbody id="scheduleTableBody">
                                    @for (int weekIndex = 0; weekIndex < weeks.Count; weekIndex++)
                                    {
                                        var weekStart = weeks[weekIndex];
                                        var weekEnd = weekStart.AddDays(6);
                                        <tr class="schedule-week-row" data-week-index="@weekIndex">
                                            <td class="text-center fw-bold align-middle">
                                                @weekStart.ToString("dd/MM", System.Globalization.CultureInfo.InvariantCulture)
                                                - @weekEnd.ToString("dd/MM", System.Globalization.CultureInfo.InvariantCulture)
                                            </td>
                                            @for (int dayOffset = 0; dayOffset < 7; dayOffset++)
                                            {
                                                var currentDate = weekStart.AddDays(dayOffset);
                                                var daySchedules = schedules.Where(s => s.DayOfWeek.Date == currentDate).OrderBy(s => s.StartTime).ToList();
                                                
                                                <td class="align-top" style="min-width: 120px;">
                                                    <div class="text-center text-muted small mb-1">
                                                        @currentDate.ToString("dd/MM", System.Globalization.CultureInfo.InvariantCulture)
                                                    </div>
                                                    @if (daySchedules.Any())
                                                    {
                                                        @foreach (var schedule in daySchedules)
                                                        {
                                                            <div class="mb-2 p-2 rounded" style="background-color: #e3f2fd; border-left: 3px solid #2196F3;">
                                                                <div class="fw-bold" style="color: #1976D2; font-size: 0.85rem;">
                                                                    @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                                                </div>
                                                                @if (!string.IsNullOrEmpty(schedule.Location))
                                                                {
                                                                    <div class="text-muted small">
                                                                        <i class="fas fa-map-marker-alt me-1"></i>@schedule.Location
                                                                    </div>
                                                                }
                                                                @if (!string.IsNullOrEmpty(schedule.OnlineLink))
                                                                {
                                                                    <div class="small mt-1">
                                                                        <a href="@schedule.OnlineLink" target="_blank" class="text-decoration-none">
                                                                            <i class="fas fa-video me-1"></i>Link học online
                                                                        </a>
                                                                    </div>
                                                                }
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="text-center text-muted small">-</div>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Students List -->
    <div class="row">
        <div class="col-12">
            <div class="card detail-card">
                <div class="detail-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-users me-2"></i>Danh Sách Nhân Viên
                        </h5>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Employees != null && Model.Employees.Any())
                    {
                        <div class="table-responsive">
                            <table class="table student-table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="width: 80px;">STT</th>
                                        <th style="width: 150px;">Mã Nhân Viên</th>
                                        <th>Họ Tên</th>
                                        <th>Email</th>
                                        <th>Số ngày nghỉ</th>
                                        <th>Điểm cuối kỳ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Employees.Count; i++)
                                    {
                                        var staff = Model.Employees[i];
                                        <tr>
                                            <td class="text-center fw-bold">@(i + 1)</td>
                                            <td>
                                                <span>@staff.EmployeeId</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <div class="fw-semibold">@staff.FullName</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-envelope me-2 text-muted"></i>
                                                    <a href="mailto:@staff.Email"
                                                       class="email-link">@staff.Email</a>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <div class="fw-semibold">@staff.AbsentNumberDay</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <div class="fw-semibold">@(staff.ScoreFinal?.ToString() ?? "N/A")</div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-user-slash fa-3x"></i>
                            <h5>Chưa có nhân viên nào</h5>
                            <p>Lớp học này hiện tại chưa có nhân viên nào được ghi danh.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Thiết Lập Lớp Học -->
<div class="modal fade" id="setupClassModal" tabindex="-1" aria-labelledby="setupClassModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="setupClassModalLabel">
                    <i class="fas fa-cog me-2"></i>Thiết Lập Lớp Học
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="setupLoading" class="text-center py-4">
                    <i class="fas fa-spinner fa-spin fa-2x text-primary"></i>
                    <div class="mt-2">Đang tải thông tin...</div>
                </div>
                <div id="setupError" class="alert alert-danger d-none"></div>
                
                <form id="setupClassForm" class="d-none">
                    <!-- Bước 1: Chọn Mentor -->
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-user-tie me-2"></i>Bước 1: Chọn Mentor
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="mentorSelect" class="form-label">Chọn Mentor <span class="text-danger">*</span></label>
                                <select class="form-select" id="mentorSelect" required>
                                    <option value="">-- Chọn mentor --</option>
                                </select>
                            </div>
                            <div id="mentorInfo" class="bg-info bg-opacity-10 border border-info rounded p-3 d-none">
                                <h6 class="text-info mb-2">Thông tin Mentor:</h6>
                                <p class="mb-1"><strong>Email:</strong> <span id="mentorEmail"></span></p>
                                <p class="mb-0"><strong>Phòng ban:</strong> <span id="mentorDept"></span></p>
                            </div>
                        </div>
                    </div>

                    <!-- Bước 2: Cấu hình Lịch Học -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>Bước 2: Cấu hình Lịch Học Hàng Tuần
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="startWeek" class="form-label">Ngày bắt đầu tuần đầu <span class="text-danger">*</span></label>
                                    <input type="date" class="form-control" id="startWeek" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="numberOfWeeks" class="form-label">Số tuần học <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" id="numberOfWeeks" min="1" max="52" value="12" required>
                                </div>
                            </div>

                            <label class="form-label">Lịch học trong tuần <span class="text-danger">*</span></label>
                            <div id="weeklyScheduleContainer">
                                <!-- Days will be added here -->
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="addScheduleDay()">
                                <i class="fas fa-plus me-1"></i>Thêm ngày học
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveSetupBtn" disabled>
                    <i class="fas fa-save me-2"></i>Lưu thiết lập
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        const classId = @Model.ClassId;
        const courseId = @Model.CourseId;
        let mentorsList = [];
        let scheduleCounter = 0;

        async function openSetupClassModal() {
            const modal = new bootstrap.Modal(document.getElementById('setupClassModal'));
            modal.show();
            await loadSetupData();
        }

        async function loadSetupData() {
            const loadingEl = document.getElementById('setupLoading');
            const errorEl = document.getElementById('setupError');
            const formEl = document.getElementById('setupClassForm');
            const selectEl = document.getElementById('mentorSelect');

            try {
                loadingEl.classList.remove('d-none');
                errorEl.classList.add('d-none');
                formEl.classList.add('d-none');

                const response = await fetch('/lop-hoc/danh-sach-mentor');
                
                if (!response.ok) {
                    throw new Error('Không thể tải danh sách mentor');
                }

                mentorsList = await response.json();
                
                // Clear and populate select
                selectEl.innerHTML = '<option value="">-- Chọn mentor --</option>';
                mentorsList.forEach(mentor => {
                    const option = document.createElement('option');
                    option.value = mentor.id;
                    option.textContent = `${mentor.fullName} (${mentor.employeeId})`;
                    option.dataset.email = mentor.email;
                    option.dataset.dept = mentor.department || 'N/A';
                    selectEl.appendChild(option);
                });

                // Set default start week to next Monday
                const startWeekInput = document.getElementById('startWeek');
                const today = new Date();
                const nextMonday = new Date(today);
                const dayOfWeek = today.getDay();
                const daysUntilMonday = dayOfWeek === 0 ? 1 : (8 - dayOfWeek);
                nextMonday.setDate(today.getDate() + daysUntilMonday);
                startWeekInput.value = nextMonday.toISOString().split('T')[0];
                startWeekInput.min = today.toISOString().split('T')[0];

                loadingEl.classList.add('d-none');
                formEl.classList.remove('d-none');
                validateForm();
            } catch (error) {
                loadingEl.classList.add('d-none');
                errorEl.textContent = error.message;
                errorEl.classList.remove('d-none');
            }
        }

        function addScheduleDay(dayOfWeek = 'Monday', startTime = '08:00', endTime = '17:00', location = '') {
            scheduleCounter++;
            const container = document.getElementById('weeklyScheduleContainer');
            const dayDiv = document.createElement('div');
            dayDiv.className = 'card mb-2';
            dayDiv.id = `scheduleDay${scheduleCounter}`;
            dayDiv.innerHTML = `
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <select class="form-control schedule-day" required onchange="validateForm()">
                                <option value="">-- Chọn ngày --</option>
                                <option value="Monday" ${dayOfWeek === 'Monday' ? 'selected' : ''}>Thứ Hai</option>
                                <option value="Tuesday" ${dayOfWeek === 'Tuesday' ? 'selected' : ''}>Thứ Ba</option>
                                <option value="Wednesday" ${dayOfWeek === 'Wednesday' ? 'selected' : ''}>Thứ Tư</option>
                                <option value="Thursday" ${dayOfWeek === 'Thursday' ? 'selected' : ''}>Thứ Năm</option>
                                <option value="Friday" ${dayOfWeek === 'Friday' ? 'selected' : ''}>Thứ Sáu</option>
                                <option value="Saturday" ${dayOfWeek === 'Saturday' ? 'selected' : ''}>Thứ Bảy</option>
                                <option value="Sunday" ${dayOfWeek === 'Sunday' ? 'selected' : ''}>Chủ Nhật</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="time" class="form-control schedule-start" value="${startTime}" required onchange="validateForm()">
                        </div>
                        <div class="col-md-3">
                            <input type="time" class="form-control schedule-end" value="${endTime}" required onchange="validateForm()">
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control schedule-location" value="${location}" placeholder="Phòng học">
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-sm btn-danger" onclick="removeScheduleDay(${scheduleCounter})">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            container.appendChild(dayDiv);
            validateForm();
        }

        function removeScheduleDay(id) {
            const dayDiv = document.getElementById(`scheduleDay${id}`);
            if (dayDiv) {
                dayDiv.remove();
                validateForm();
            }
        }

        document.getElementById('mentorSelect')?.addEventListener('change', function() {
            const infoDiv = document.getElementById('mentorInfo');
            
            if (this.value) {
                const selectedOption = this.options[this.selectedIndex];
                document.getElementById('mentorEmail').textContent = selectedOption.dataset.email;
                document.getElementById('mentorDept').textContent = selectedOption.dataset.dept;
                infoDiv.classList.remove('d-none');
            } else {
                infoDiv.classList.add('d-none');
            }
            validateForm();
        });

        function validateForm() {
            const mentorId = document.getElementById('mentorSelect')?.value;
            const startWeek = document.getElementById('startWeek')?.value;
            const numberOfWeeks = document.getElementById('numberOfWeeks')?.value;
            const scheduleDays = document.querySelectorAll('.schedule-day');
            
            let isValid = mentorId && startWeek && numberOfWeeks && scheduleDays.length > 0;
            
            // Check all schedule days are filled
            if (isValid) {
                scheduleDays.forEach(day => {
                    const row = day.closest('.row');
                    const startTime = row.querySelector('.schedule-start').value;
                    const endTime = row.querySelector('.schedule-end').value;
                    if (!day.value || !startTime || !endTime) {
                        isValid = false;
                    }
                });
            }
            
            const saveBtn = document.getElementById('saveSetupBtn');
            if (saveBtn) {
                saveBtn.disabled = !isValid;
            }
        }

        document.getElementById('saveSetupBtn')?.addEventListener('click', async function() {
            const mentorId = document.getElementById('mentorSelect').value;
            const startWeek = document.getElementById('startWeek').value;
            const numberOfWeeks = parseInt(document.getElementById('numberOfWeeks').value);
            
            // Collect weekly schedules
            const weeklySchedules = [];
            const scheduleDays = document.querySelectorAll('.schedule-day');
            
            scheduleDays.forEach(daySelect => {
                const row = daySelect.closest('.row');
                const dayOfWeek = daySelect.value;
                const startTime = row.querySelector('.schedule-start').value;
                const endTime = row.querySelector('.schedule-end').value;
                const location = row.querySelector('.schedule-location').value;
                
                if (dayOfWeek && startTime && endTime) {
                    weeklySchedules.push({
                        dayOfWeek: dayOfWeek,
                        startTime: startTime + ':00',
                        endTime: endTime + ':00',
                        location: location || null
                    });
                }
            });

            if (weeklySchedules.length === 0) {
                alert('Vui lòng thêm ít nhất một ngày học!');
                return;
            }

            const btn = this;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang lưu...';
            btn.disabled = true;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                const requestData = {
                    classId: classId,
                    courseId: courseId,
                    mentorId: mentorId,
                    startWeek: startWeek,
                    numberOfWeeks: numberOfWeeks,
                    weeklySchedules: weeklySchedules
                };
                
                console.log('Request data:', requestData);
                
                const response = await fetch('/lop-hoc/thiet-lap', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(requestData)
                });

                console.log('Response status:', response.status);

                if (response.ok) {
                    alert('Thiết lập lớp học thành công!');
                    location.reload();
                } else {
                    const contentType = response.headers.get('content-type');
                    let errorMessage = '';
                    
                    if (contentType && contentType.includes('application/json')) {
                        const errorData = await response.json();
                        errorMessage = errorData.message || JSON.stringify(errorData);
                    } else {
                        errorMessage = await response.text();
                    }
                    
                    console.error('Error response:', errorMessage);
                    alert(errorMessage);
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            } catch (error) {
                alert('Đã xảy ra lỗi: ' + error.message);
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });
    </script>
}