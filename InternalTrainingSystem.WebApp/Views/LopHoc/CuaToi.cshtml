@model List<InternalTrainingSystem.WebApp.Models.DTOs.MyClassDto>
@using InternalTrainingSystem.WebApp.Constants
@{
    ViewData["Title"] = "Lớp Học Của Tôi";
    var isMentor = User.IsInRole(UserRoles.Mentor);
}

@section Styles {
    <link rel="stylesheet" href="~/css/lop-hoc.css" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-chalkboard-teacher me-2"></i>Lớp Học Của Tôi
                </h2>
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">
                        Tổng số: <strong>@(Model?.Count ?? 0)</strong> lớp học
                    </span>
                </div>
            </div>

            <div class="card shadow-sm class-card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 class-table">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th class="text-center" style="width: 5%;">#ID</th>
                                    <th style="@(isMentor ? "width: 30%;" : "width: 25%;")">Tên Lớp</th>
                                    <th style="@(isMentor ? "width: 35%;" : "width: 30%;")">Khóa Học</th>
                                    @if (!isMentor)
                                    {
                                        <th style="width: 15%;">Mentor</th>
                                    }
                                    <th class="text-center" style="width: 12%;">Trạng Thái</th>
                                    <th class="text-center" style="width: 13%;">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var classItem in Model)
                                    {
                                        <tr>
                                            <td class="text-center fw-bold">@classItem.ClassId</td>
                                            <td title="@classItem.ClassName" class="text-truncate-hover">
                                                <strong>@classItem.ClassName</strong>
                                            </td>
                                            <td title="@classItem.CourseName" class="text-truncate-hover">
                                                <span class="text-info">@classItem.CourseName</span>
                                            </td>
                                            @if (!isMentor)
                                            {
                                                <td title="@classItem.Mentor" class="text-truncate-hover">
                                                    <i class="fas fa-user-tie me-1 text-secondary"></i>
                                                    @classItem.Mentor
                                                </td>
                                            }
                                            <td class="text-center">
                                                @{
                                                    var badgeClass = classItem.Status switch
                                                    {
                                                        "Created" => "bg-info",
                                                        "Scheduled" => "bg-primary",
                                                        "Completed" => "bg-success",
                                                        "Cancelled" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                    var statusText = classItem.Status switch
                                                    {
                                                        "Created" => "Đã tạo",
                                                        "Scheduled" => "Đã lên lịch",
                                                        "Completed" => "Hoàn thành",
                                                        "Cancelled" => "Đã hủy",
                                                        _ => "Không xác định"
                                                    };
                                                    var statusIcon = classItem.Status switch
                                                    {
                                                        "Created" => "fa-plus-circle",
                                                        "Scheduled" => "fa-calendar-alt",
                                                        "Completed" => "fa-check-circle",
                                                        "Cancelled" => "fa-times-circle",
                                                        _ => "fa-question-circle"
                                                    };
                                                }
                                                <span class="badge @badgeClass">
                                                    <i class="fas @statusIcon me-1"></i>@statusText
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("ChiTiet", new { id = classItem.ClassId })" 
                                                   class="btn btn-primary btn-sm class-detail-btn" 
                                                   title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i> Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="@(isMentor ? "5" : "6")" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                                            <span>Bạn chưa tham gia lớp học nào.</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
