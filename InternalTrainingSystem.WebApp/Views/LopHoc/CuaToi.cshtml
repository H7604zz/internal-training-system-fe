@model List<InternalTrainingSystem.WebApp.Models.DTOs.MyClassDto>
@using InternalTrainingSystem.WebApp.Constants
@{
    ViewData["Title"] = "Lớp Học Của Tôi";
    var isMentor = User.IsInRole(UserRoles.Mentor);
    var isStaff = User.IsInRole(UserRoles.Staff);
}

@section Styles {
    <link rel="stylesheet" href="~/css/lop-hoc.css" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-chalkboard-teacher me-2"></i>Lớp Học Của Tôi
                </h2>
                <div class="d-flex align-items-center">
                    @if (!isMentor)
                    {
                        <a href="@Url.Action("YeuCauDoiLop")" class="btn btn-info me-3">
                            <i class="fas fa-exchange-alt me-2"></i>Yêu cầu đổi lớp
                        </a>
                    }
                    <span class="text-muted me-3">
                        Tổng số: <strong>@(Model?.Count ?? 0)</strong> lớp học
                    </span>
                </div>
            </div>

            <div class="card shadow-sm class-card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 class-table">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th class="text-center" style="width: 5%;">#ID</th>
                                    <th style="@(isMentor ? "width: 30%;" : "width: 25%;")">Tên Lớp</th>
                                    <th style="@(isMentor ? "width: 35%;" : "width: 30%;")">Khóa Học</th>
                                    @if (!isMentor)
                                    {
                                        <th style="width: 15%;">Mentor</th>
                                    }
                                    <th class="text-center" style="width: 12%;">Trạng Thái</th>
                                    <th class="text-center" style="width: 13%;">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var classItem in Model)
                                    {
                                        <tr>
                                            <td class="text-center fw-bold">@classItem.ClassId</td>
                                            <td title="@classItem.ClassName" class="text-truncate-hover">
                                                <strong>@classItem.ClassName</strong>
                                            </td>
                                            <td title="@classItem.CourseName" class="text-truncate-hover">
                                                <span class="text-info">@classItem.CourseName</span>
                                            </td>
                                            @if (!isMentor)
                                            {
                                                <td title="@classItem.Mentor" class="text-truncate-hover">
                                                    <i class="fas fa-user-tie me-1 text-secondary"></i>
                                                    @classItem.Mentor
                                                </td>
                                            }
                                            <td class="text-center">
                                                @{
                                                    var badgeClass = classItem.Status switch
                                                    {
                                                        "Created" => "bg-info",
                                                        "Scheduled" => "bg-primary",
                                                        "Completed" => "bg-success",
                                                        "Cancelled" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                    var statusText = classItem.Status switch
                                                    {
                                                        "Created" => "Đã tạo",
                                                        "Scheduled" => "Đã lên lịch",
                                                        "Completed" => "Hoàn thành",
                                                        "Cancelled" => "Đã hủy",
                                                        _ => "Không xác định"
                                                    };
                                                    var statusIcon = classItem.Status switch
                                                    {
                                                        "Created" => "fa-plus-circle",
                                                        "Scheduled" => "fa-calendar-alt",
                                                        "Completed" => "fa-check-circle",
                                                        "Cancelled" => "fa-times-circle",
                                                        _ => "fa-question-circle"
                                                    };
                                                }
                                                <span class="badge @badgeClass">
                                                    <i class="fas @statusIcon me-1"></i>@statusText
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("ChiTiet", new { id = classItem.ClassId })" 
                                                       class="btn btn-primary" 
                                                       title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                                @if (isStaff && classItem.StartDate > DateTime.Now)
                                                {
                                                    <button type="button" 
                                                            class="btn btn-warning btn-sm ms-1" 
                                                            onclick="openSwapClassModal(@classItem.ClassId, '@classItem.ClassName', @classItem.CourseId, '@classItem.EmployeeId')"
                                                            title="Đổi lớp">
                                                        <i class="fas fa-exchange-alt"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="@(isMentor ? "5" : "6")" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                                            <span>Bạn chưa tham gia lớp học nào.</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Đổi lớp -->
<div class="modal fade" id="swapClassModal" tabindex="-1" aria-labelledby="swapClassModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="swapClassModalLabel">
                    <i class="fas fa-exchange-alt me-2"></i>Đổi Lớp Học
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="swapClassId" />
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Bạn đang yêu cầu đổi lớp: <strong id="currentClassName"></strong>
                </div>
                <div class="mb-3">
                    <label for="targetEmployeeId" class="form-label">
                        <i class="fas fa-user me-1"></i>Mã nhân viên muốn đổi lớp
                    </label>
                    <input type="text" 
                           class="form-control" 
                           id="targetEmployeeId" 
                           placeholder="Nhập mã nhân viên..." 
                           required />
                    <div class="form-text">
                        Nhập mã nhân viên của người bạn muốn đổi lớp cùng
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Hủy
                </button>
                <button type="button" class="btn btn-warning" onclick="submitSwapRequest()">
                    <i class="fas fa-paper-plane me-1"></i>Gửi yêu cầu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let swapClassModal;
        let currentCourseId;
        let currentEmployeeId;

        document.addEventListener('DOMContentLoaded', function () {
            swapClassModal = new bootstrap.Modal(document.getElementById('swapClassModal'));
        });

        function openSwapClassModal(classId, className, courseId, employeeId) {
            document.getElementById('swapClassId').value = classId;
            document.getElementById('currentClassName').textContent = className;
            document.getElementById('targetEmployeeId').value = '';
            currentCourseId = courseId;
            currentEmployeeId = employeeId;
            swapClassModal.show();
        }

        async function submitSwapRequest() {
            const classId = parseInt(document.getElementById('swapClassId').value);
            const targetEmployeeId = document.getElementById('targetEmployeeId').value.trim();

            if (!targetEmployeeId) {
                alert('Vui lòng nhập mã nhân viên!');
                return;
            }

            try {
                // Get target user's class in the same course
                const classesResponse = await fetch(`/lop-hoc/by-course/${currentCourseId}`);
                if (!classesResponse.ok) {
                    throw new Error('Không thể lấy danh sách lớp học');
                }
                const classesResult = await classesResponse.json();
                const classes = classesResult.data || classesResult;
                
                // Find which class the target employee is in
                let targetClassId = null;
                for (const cls of classes) {
                    const detailResponse = await fetch(`/lop-hoc/json/class-detail/${cls.classId}`);
                    if (detailResponse.ok) {
                        const detail = await detailResponse.json();
                        if (detail.employees && detail.employees.some(e => e.employeeId === targetEmployeeId)) {
                            targetClassId = cls.classId;
                            break;
                        }
                    }
                }

                if (!targetClassId) {
                    alert('Không tìm thấy nhân viên này trong các lớp học cùng khóa học!');
                    return;
                }

                // Submit swap request
                const swapResponse = await fetch('/lop-hoc/swap-class/request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        employeeIdFrom: currentEmployeeId,
                        classIdFrom: classId,
                        employeeIdTo: targetEmployeeId,
                        classIdTo: targetClassId
                    })
                });

                if (swapResponse.ok) {
                    swapClassModal.hide();
                    alert('Gửi yêu cầu đổi lớp thành công!');
                    location.reload();
                } else {
                    const errorText = await swapResponse.text();
                    alert('Có lỗi xảy ra: ' + errorText);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi gửi yêu cầu: ' + error.message);
            }
        }
    </script>
}
