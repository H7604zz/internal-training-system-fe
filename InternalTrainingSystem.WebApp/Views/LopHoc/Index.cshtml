@model List<InternalTrainingSystem.WebApp.Models.DTOs.ClassDto>
@{
    ViewData["Title"] = "Danh Sách Lớp Học";
}

@section Styles {
    <link rel="stylesheet" href="~/css/lop-hoc.css" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-users me-2"></i>Danh Sách Lớp Học
                </h2>
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">
                        Tổng số: <strong>@ViewBag.TotalItems</strong> lớp học
                    </span>
                    <a href="@Url.Action("TaoLop", "LopHoc")" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Tạo Lớp
                    </a>
                </div>
            </div>


            <div class="card shadow-sm class-card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 class-table">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th class="text-center" style="width: 5%;">#ID</th>
                                    <th style="width: 30%;">Tên Lớp</th>
                                    <th style="width: 28%;">Khóa Học</th>
                                    <th style="width: 15%;">Mentor</th>
                                    <th class="text-center" style="width: 12%;">Trạng Thái</th>
                                    <th class="text-center" style="width: 9%;">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var classItem in Model)
                                    {
                                        <tr>
                                            <td class="text-center fw-bold">@classItem.ClassId</td>
                                            <td title="@classItem.ClassName" class="text-truncate-hover">
                                                <strong>@classItem.ClassName</strong>
                                            </td>
                                            <td title="@classItem.CourseName" class="text-truncate-hover">
                                                <span class="text-info">@classItem.CourseName</span>
                                            </td>
                                            <td title="@classItem.MentorName" class="text-truncate-hover">
                                                <i class="fas fa-user-tie me-1 text-secondary"></i>
                                                @classItem.MentorName
                                            </td>
                                            <td class="text-center">
                                                @if (classItem.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle me-1"></i>Hoạt động
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-pause-circle me-1"></i>Không hoạt động
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("ChiTiet", new { id = classItem.ClassId })" 
                                                   class="btn btn-primary btn-sm class-detail-btn" 
                                                   title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i> Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-muted">
                                            <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                                            <span>Không có dữ liệu lớp học nào.</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages >= 1)
            {
                @await Html.PartialAsync("_Pagination", new InternalTrainingSystem.WebApp.Models.ViewModels.PaginationViewModel(
                    ViewBag.CurrentPage ?? 1,
                    ViewBag.TotalPages ?? 1,
                    ViewBag.PageSize ?? InternalTrainingSystem.WebApp.Constants.PaginationConstants.ClassPageSize,
                    "Index",
                    "LopHoc"
                ) { AriaLabel = "Phân trang lớp học", TotalItems = ViewBag.TotalItems })
            }
        </div>
    </div>
</div>

