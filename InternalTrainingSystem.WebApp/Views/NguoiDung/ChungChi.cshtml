@model List<InternalTrainingSystem.WebApp.Models.DTOs.CertificateDto>
@{
    ViewData["Title"] = "Chứng Chỉ Của Tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/certificates.css" asp-append-version="true" />
}

<div class="certificates-container">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1><i class="fas fa-certificate me-2"></i>Chứng Chỉ Của Tôi</h1>
            <p>Quản lý và xem các chứng chỉ đã đạt được</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Statistics -->
            <div class="stats-row">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-certificate text-primary"></i></div>
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Tổng Chứng Chỉ</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-check-circle text-success"></i></div>
                    <div class="stat-value">@Model.Count(c => !c.IsExpired)</div>
                    <div class="stat-label">Còn Hiệu Lực</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-exclamation-triangle text-warning"></i></div>
                    <div class="stat-value">@Model.Count(c => c.IsExpired)</div>
                    <div class="stat-label">Đã Hết Hạn</div>
                </div>
            </div>

            <!-- Certificates List -->
            @foreach (var certificate in Model)
            {
                <div class="certificate-card">
                    <div class="certificate-header">
                        <div class="certificate-icon">
                            <i class="fas fa-award"></i>
                        </div>
                        <div class="certificate-info">
                            <h3 class="certificate-name">@certificate.CertificateName</h3>
                            <div class="course-name">@certificate.CourseName</div>
                            <span class="course-code">@certificate.CourseCode</span>
                            
                            @if (certificate.IsExpired)
                            {
                                <span class="certificate-status status-expired ms-2">
                                    <i class="fas fa-times-circle"></i> Đã hết hạn
                                </span>
                            }
                            else if (certificate.HasExpiration)
                            {
                                <span class="certificate-status status-valid ms-2">
                                    <i class="fas fa-check-circle"></i> Còn hiệu lực
                                </span>
                            }
                            else
                            {
                                <span class="certificate-status status-no-expiry ms-2">
                                    <i class="fas fa-infinity"></i> Không hết hạn
                                </span>
                            }
                        </div>
                    </div>

                    <div class="certificate-details">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Người nhận</div>
                                <div class="detail-value">@certificate.UserFullName</div>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Ngày cấp</div>
                                <div class="detail-value">@certificate.IssueDateDisplay</div>
                            </div>
                        </div>

                        @if (certificate.HasExpiration)
                        {
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="fas fa-calendar-times"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Ngày hết hạn</div>
                                    <div class="detail-value">@certificate.ExpirationDateDisplay</div>
                                </div>
                            </div>
                        }

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="fas fa-fingerprint"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Mã chứng chỉ</div>
                                <div class="detail-value">#@certificate.CertificateId</div>
                            </div>
                        </div>
                    </div>

                    <div class="certificate-actions">
                        <a asp-controller="KhoaHoc" 
                           asp-action="XemChungChi" 
                           asp-route-courseId="@certificate.CourseId" 
                           class="btn-view">
                            <i class="fas fa-eye"></i>
                            Xem Chứng Chỉ
                        </a>
                        <a asp-controller="KhoaHoc" 
                           asp-action="TaiChungChi" 
                           asp-route-courseId="@certificate.CourseId" 
                           class="btn-download">
                            <i class="fas fa-download"></i>
                            Tải Xuống
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-certificate"></i>
                </div>
                <h3>Chưa có chứng chỉ nào</h3>
                <p>Bạn chưa hoàn thành khóa học nào để nhận chứng chỉ. Hãy tiếp tục học tập!</p>
                <a asp-controller="KhoaHoc" asp-action="DanhSachKhoaHocCuaToi" class="btn-view">
                    <i class="fas fa-graduation-cap"></i>
                    Xem Khóa Học
                </a>
            </div>
        }

        <!-- Back Button -->
        <div class="text-center mt-4">
            <a asp-controller="NguoiDung" asp-action="ThongTinCaNhan" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Quay Lại Trang Cá Nhân
            </a>
        </div>
    </div>
</div>
