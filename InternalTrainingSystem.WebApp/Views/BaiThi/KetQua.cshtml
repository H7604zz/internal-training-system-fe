@{
    ViewData["Title"] = "Kết quả bài kiểm tra";
    var attemptId = ViewBag.AttemptId;
}

@section Styles {
    <link rel="stylesheet" href="~/css/ket-qua.css" asp-append-version="true" />
}

<div class="result-container">
    <!-- Loading overlay -->
    <div id="loading-overlay" class="loading-overlay">
        <div class="loading-content">
            <div class="spinner"></div>
            <p>Đang tải kết quả...</p>
        </div>
    </div>

    <!-- Result Header -->
    <div id="result-header" class="result-header" style="display: none;">
        <div id="result-icon" class="result-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1 id="result-title" class="result-title">Chúc mừng!</h1>
        <p id="result-subtitle" class="result-subtitle">Bạn đã hoàn thành bài kiểm tra</p>
        
        <!-- Score Display -->
        <div class="score-display" style="margin-top: 2rem;">
            <span id="score-value">0</span>
            <span style="font-size: 2rem;">/</span>
            <span id="max-score-value">0</span>
        </div>
        
        <!-- Status Badge -->
        <div style="margin-top: 1.5rem; text-center;">
            <span id="status-badge" class="status-badge" style="font-size: 1.2rem; padding: 0.5rem 1.5rem;">--</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let attemptId = @attemptId;
        let resultData = null;

        // Initialize
        document.addEventListener('DOMContentLoaded', async function() {
            await loadResult();
        });

        async function loadResult() {
            try {
                const response = await fetch(`/bai-thi/get-result/${attemptId}`);
                
                if (!response.ok) {
                    throw new Error('Không thể tải kết quả');
                }

                resultData = await response.json();
                
                // Hide loading overlay
                document.getElementById('loading-overlay').style.display = 'none';
                
                // Display result
                displayResult();
            } catch (error) {
                console.error('Error loading result:', error);
                alert('Có lỗi xảy ra khi tải kết quả: ' + error.message);
                window.history.back();
            }
        }

        function displayResult() {
            // Show sections
            document.getElementById('result-header').style.display = 'block';
            // If an action buttons section exists in future, reveal it safely
            const actions = document.getElementById('action-buttons');
            if (actions) actions.style.display = 'flex';

            // Set icon and title based on pass/fail
            const resultIcon = document.getElementById('result-icon');
            const resultTitle = document.getElementById('result-title');
            const resultSubtitle = document.getElementById('result-subtitle');

            if (resultData.isPassed) {
                resultIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
                resultIcon.classList.add('passed');
                resultTitle.textContent = 'Chúc mừng! Bạn đã đạt yêu cầu';
                resultTitle.classList.add('passed');
                resultSubtitle.textContent = 'Bạn đã hoàn thành xuất sắc bài kiểm tra này';
                
                // Add confetti effect for passed
                createConfetti();
            } else {
                resultIcon.innerHTML = '<i class="fas fa-times-circle"></i>';
                resultIcon.classList.add('failed');
                resultTitle.textContent = 'Chưa đạt yêu cầu';
                resultTitle.classList.add('failed');
                resultSubtitle.textContent = 'Đừng nản lòng! Hãy cố gắng thêm ở lần sau';
            }

            // Set score
            document.getElementById('score-value').textContent = resultData.score || 0;
            document.getElementById('max-score-value').textContent = resultData.maxScore || 0;

            // Set status badge
            const statusBadge = document.getElementById('status-badge');
            if (resultData.isPassed) {
                statusBadge.textContent = 'Đạt';
                statusBadge.classList.add('passed');
            } else {
                statusBadge.textContent = 'Không đạt';
                statusBadge.classList.add('failed');
            }
        }

        function createConfetti() {
            const colors = ['#667eea', '#764ba2', '#f59e0b', '#10b981', '#ef4444', '#ec4899'];
            const confettiCount = 50;

            for (let i = 0; i < confettiCount; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * window.innerWidth + 'px';
                    confetti.style.top = '-10px';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = Math.random() * 3 + 's';
                    confetti.style.animationDuration = (Math.random() * 3 + 2) + 's';
                    document.body.appendChild(confetti);

                    setTimeout(() => {
                        confetti.remove();
                    }, 5000);
                }, i * 50);
            }
        }

    </script>
}
