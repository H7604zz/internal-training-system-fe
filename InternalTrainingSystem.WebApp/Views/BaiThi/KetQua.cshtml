@{
    ViewData["Title"] = "Kết quả bài kiểm tra";
    var attemptId = ViewBag.AttemptId;
}

@section Styles {
    <link rel="stylesheet" href="~/css/ket-qua.css" asp-append-version="true" />
}

<div class="result-container">
    <!-- Loading overlay -->
    <div id="loading-overlay" class="loading-overlay">
        <div class="loading-content">
            <div class="spinner"></div>
            <p>Đang tải kết quả...</p>
        </div>
    </div>

    <!-- Result Header -->
    <div id="result-header" class="result-header" style="display: none;">
        <div id="result-icon" class="result-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1 id="result-title" class="result-title">Chúc mừng!</h1>
        <p id="result-subtitle" class="result-subtitle">Bạn đã hoàn thành bài kiểm tra</p>
    </div>

    <!-- Score Card -->
    <div id="score-card" class="score-card" style="display: none;">
        <div class="text-center mb-3">
            <h3 style="margin: 0; opacity: 0.9;">Điểm số của bạn</h3>
        </div>
        <div class="score-display">
            <span id="score-value">0</span>
            <span style="font-size: 2rem;">/</span>
            <span id="max-score-value">0</span>
        </div>
        <div class="score-percentage text-center">
            (<span id="percentage-value">0</span>%)
        </div>
    </div>

    <!-- Result Details -->
    <div id="result-details" class="result-details" style="display: none;">
        <h3 class="mb-3">Thông tin chi tiết</h3>
        
        <div class="detail-row">
            <span class="detail-label">Bài kiểm tra:</span>
            <span class="detail-value" id="quiz-title">--</span>
        </div>
        
        <div class="detail-row">
            <span class="detail-label">Trạng thái:</span>
            <span id="status-badge" class="status-badge">--</span>
        </div>
        
        <div class="detail-row">
            <span class="detail-label">Điểm đạt yêu cầu:</span>
            <span class="detail-value"><span id="passing-score">--</span>%</span>
        </div>
        
        <div class="detail-row">
            <span class="detail-label">Thời gian bắt đầu:</span>
            <span class="detail-value" id="start-time">--</span>
        </div>
        
        <div class="detail-row">
            <span class="detail-label">Thời gian nộp bài:</span>
            <span class="detail-value" id="end-time">--</span>
        </div>
        
        <div class="detail-row">
            <span class="detail-label">Thời gian làm bài:</span>
            <span class="detail-value" id="duration">--</span>
        </div>
    </div>

    <!-- Action Buttons -->
    <div id="action-buttons" class="action-buttons" style="display: none;">
        <button type="button" class="btn-action btn-primary-custom" onclick="backToCourse()">
            <i class="fas fa-arrow-left"></i>
            Quay lại khóa học
        </button>
        <button type="button" class="btn-action btn-secondary-custom" onclick="viewHistory()">
            <i class="fas fa-history"></i>
            Xem lịch sử làm bài
        </button>
    </div>
</div>

@section Scripts {
    <script>
        let attemptId = @attemptId;
        let resultData = null;

        // Initialize
        document.addEventListener('DOMContentLoaded', async function() {
            await loadResult();
        });

        async function loadResult() {
            try {
                const response = await fetch(`/bai-thi/get-result/${attemptId}`);
                
                if (!response.ok) {
                    throw new Error('Không thể tải kết quả');
                }

                resultData = await response.json();
                
                // Hide loading overlay
                document.getElementById('loading-overlay').style.display = 'none';
                
                // Display result
                displayResult();
            } catch (error) {
                console.error('Error loading result:', error);
                alert('Có lỗi xảy ra khi tải kết quả: ' + error.message);
                window.history.back();
            }
        }

        function displayResult() {
            // Show sections
            document.getElementById('result-header').style.display = 'block';
            document.getElementById('score-card').style.display = 'block';
            document.getElementById('result-details').style.display = 'block';
            document.getElementById('action-buttons').style.display = 'flex';

            // Set icon and title based on pass/fail
            const resultIcon = document.getElementById('result-icon');
            const resultTitle = document.getElementById('result-title');
            const resultSubtitle = document.getElementById('result-subtitle');

            if (resultData.isPassed) {
                resultIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
                resultIcon.classList.add('passed');
                resultTitle.textContent = 'Chúc mừng! Bạn đã đạt yêu cầu';
                resultTitle.classList.add('passed');
                resultSubtitle.textContent = 'Bạn đã hoàn thành xuất sắc bài kiểm tra này';
                
                // Add confetti effect for passed
                createConfetti();
            } else {
                resultIcon.innerHTML = '<i class="fas fa-times-circle"></i>';
                resultIcon.classList.add('failed');
                resultTitle.textContent = 'Chưa đạt yêu cầu';
                resultTitle.classList.add('failed');
                resultSubtitle.textContent = 'Đừng nản lòng! Hãy cố gắng thêm ở lần sau';
            }

            // Set score
            document.getElementById('score-value').textContent = resultData.score || 0;
            document.getElementById('max-score-value').textContent = resultData.maxScore || 0;
            document.getElementById('percentage-value').textContent = Math.round(resultData.percentage || 0);

            // Set details
            document.getElementById('quiz-title').textContent = resultData.quizTitle || 'Bài kiểm tra';
            document.getElementById('passing-score').textContent = resultData.passingScore || 0;

            // Set status badge
            const statusBadge = document.getElementById('status-badge');
            if (resultData.isPassed) {
                statusBadge.textContent = 'Đạt yêu cầu';
                statusBadge.classList.add('passed');
            } else {
                statusBadge.textContent = 'Chưa đạt';
                statusBadge.classList.add('failed');
            }

            // Format dates
            if (resultData.startTime) {
                const startDate = new Date(resultData.startTime);
                document.getElementById('start-time').textContent = startDate.toLocaleString('vi-VN');
            }

            if (resultData.endTime) {
                const endDate = new Date(resultData.endTime);
                document.getElementById('end-time').textContent = endDate.toLocaleString('vi-VN');
                
                // Calculate duration
                if (resultData.startTime) {
                    const startDate = new Date(resultData.startTime);
                    const duration = Math.floor((endDate - startDate) / 1000); // in seconds
                    const minutes = Math.floor(duration / 60);
                    const seconds = duration % 60;
                    document.getElementById('duration').textContent = `${minutes} phút ${seconds} giây`;
                }
            } else {
                document.getElementById('end-time').textContent = 'Chưa hoàn thành';
                document.getElementById('duration').textContent = '--';
            }
        }

        function createConfetti() {
            const colors = ['#667eea', '#764ba2', '#f59e0b', '#10b981', '#ef4444', '#ec4899'];
            const confettiCount = 50;

            for (let i = 0; i < confettiCount; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * window.innerWidth + 'px';
                    confetti.style.top = '-10px';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = Math.random() * 3 + 's';
                    confetti.style.animationDuration = (Math.random() * 3 + 2) + 's';
                    document.body.appendChild(confetti);

                    setTimeout(() => {
                        confetti.remove();
                    }, 5000);
                }, i * 50);
            }
        }

        function backToCourse() {
            // Try to go back to the learning page
            const urlParams = new URLSearchParams(window.location.search);
            const courseId = urlParams.get('courseId');
            
            if (courseId) {
                window.location.href = `/khoa-hoc/hoc-tap/${courseId}`;
            } else {
                // Fallback: go back in history
                window.history.back();
            }
        }

        function viewHistory() {
            // Go back to course learning page where history is displayed
            const urlParams = new URLSearchParams(window.location.search);
            const courseId = urlParams.get('courseId');
            const lessonId = urlParams.get('lessonId');
            
            if (courseId && lessonId) {
                window.location.href = `/khoa-hoc/hoc-tap/${courseId}?lessonId=${lessonId}`;
            } else {
                window.history.back();
            }
        }
    </script>
}
