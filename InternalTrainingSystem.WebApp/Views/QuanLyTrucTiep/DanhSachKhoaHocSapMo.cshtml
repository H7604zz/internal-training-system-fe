@using InternalTrainingSystem.WebApp.Models.DTOs
@model IEnumerable<CourseDto>
@{
    ViewData["Title"] = "Danh Sách Khóa Học Sắp Mở Lớp";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    string search = ViewBag.Search ?? "";
    string category = ViewBag.Category ?? "";
    string level = ViewBag.Level ?? "";
}

@section Styles {
    <link rel="stylesheet" href="~/css/quan-ly-truc-tiep.css" />
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-chalkboard-teacher me-2"></i>
                    Quản Lý Khóa Học Sắp Mở Lớp
                </h1>
                <p class="page-subtitle">Quản lý và mời nhân viên tham gia các khóa học sắp mở lớp</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card primary">
                <div class="stats-content">
                    <div class="stats-number" id="totalCourses">@Model.Count()</div>
                    <div class="stats-label">Khóa Học Sắp Mở</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-book-open"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card success">
                <div class="stats-content">
                    <div class="stats-number" id="pendingStaff">-</div>
                    <div class="stats-label">Nhân Viên Chờ Mời</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-users-clock"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card warning">
                <div class="stats-content">
                    <div class="stats-number" id="invitedStaff">-</div>
                    <div class="stats-label">Đã Gửi Lời Mời</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-paper-plane"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card info">
                <div class="stats-content">
                    <div class="stats-number" id="confirmedStaff">-</div>
                    <div class="stats-label">Đã Xác Nhận</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="search-filter-card">
                <form method="get" asp-action="DanhSachKhoaHocSapMo" id="searchForm">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Tìm kiếm khóa học</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       id="search" 
                                       name="search" 
                                       value="@search" 
                                       placeholder="Nhập tên hoặc mô tả khóa học...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label for="category" class="form-label">Danh mục</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">Tất cả danh mục</option>
                                <option value="lap-trinh" >Lập Trình</option>
                                <option value="quan-ly">Quản Lý</option>
                                <option value="ky-nang-mem" >Kỹ Năng Mềm</option>
                                <option value="ngoai-ngu" >Ngoại Ngữ</option>
                                <option value="cong-nghe">Công Nghệ</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="level" class="form-label">Trình độ</label>
                            <select class="form-select" id="level" name="level">
                                <option value="">Tất cả trình độ</option>
                                <option value="co-ban">Cơ Bản</option>
                                <option value="trung-binh" >Trung Bình</option>
                                <option value="nang-cao" >Nâng Cao</option>
                                <option value="chuyen-gia" >Chuyên Gia</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label d-block">&nbsp;</label>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-1"></i>
                                Tìm kiếm
                            </button>
                        </div>
                    </div>
                    <input type="hidden" name="page" value="1">
                    <input type="hidden" name="pageSize" value="@pageSize">
                </form>
            </div>
        </div>
    </div>

    <!-- Course List -->
    <div class="row">
        <div class="col-12">
            <div class="course-list-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        Danh Sách Khóa Học
                    </h5>
                    <div class="card-tools">
                        <span class="badge bg-info">@Model.Count() khóa học</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên Khóa Học</th>
                                        <th>Mô Tả</th>
                                        <th>Danh Mục</th>
                                        <th>Trình Độ</th>
                                        <th>Ngày Bắt Đầu</th>
                                        <th>Trạng Thái</th>
                                        <th class="text-center">Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = (currentPage - 1) * pageSize + 1;
                                    }
                                    @foreach (var course in Model)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>
                                                <div class="course-name">
                                                    <strong>@course.Name</strong>
                                                    @if (!string.IsNullOrEmpty(course.Code))
                                                    {
                                                        <small class="text-muted d-block">Mã: @course.Code</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <div class="course-description">
                                                    @(course.Description?.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@GetCategoryName(course.Category)</span>
                                            </td>
                                            <td>
                                                <span class="badge @GetLevelBadgeClass(course.Level)">@GetLevelName(course.Level)</span>
                                            </td>
                                            <td>
                                                @if (course.StartDate.HasValue)
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-calendar-alt me-1"></i>
                                                        @course.StartDate.Value.ToString("dd/MM/yyyy")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa xác định</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">Sắp Mở Lớp</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("DanhSachStaffDuDieuKien", new { courseId = course.Id })" 
                                                       class="btn btn-primary btn-sm" 
                                                       title="Xem danh sách nhân viên đủ điều kiện">
                                                        <i class="fas fa-users"></i>
                                                        Mời Staff
                                                    </a>
                                                    <a href="@Url.Action("ChiTietKhoaHoc", "Course", new { id = course.Id })" 
                                                       class="btn btn-outline-info btn-sm" 
                                                       title="Xem chi tiết khóa học">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <h5 class="empty-state-title">Không tìm thấy khóa học</h5>
                            <p class="empty-state-text">
                                @if (!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(category) || !string.IsNullOrEmpty(level))
                                {
                                    <span>Không có khóa học nào phù hợp với tiêu chí tìm kiếm.</span>
                                    <br>
                                    <a href="@Url.Action("DanhSachKhoaHocSapMo")" class="btn btn-outline-primary btn-sm mt-2">
                                        <i class="fas fa-times me-1"></i>
                                        Xóa bộ lọc
                                    </a>
                                }
                                else
                                {
                                    <span>Hiện tại không có khóa học nào sắp mở lớp.</span>
                                }
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Phân trang khóa học">
                    <ul class="pagination justify-content-center">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetPageUrl(currentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                    Trước
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(currentPage + 2, 10); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="@GetPageUrl(i)">@i</a>
                            </li>
                        }

                        @if (currentPage < 10)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetPageUrl(currentPage + 1)">
                                    Sau
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

@functions {
    string GetCategoryName(string category)
    {
        return category switch
        {
            "lap-trinh" => "Lập Trình",
            "quan-ly" => "Quản Lý",
            "ky-nang-mem" => "Kỹ Năng Mềm",
            "ngoai-ngu" => "Ngoại Ngữ",
            "cong-nghe" => "Công Nghệ",
            _ => category ?? "Không xác định"
        };
    }

    string GetLevelName(string level)
    {
        return level switch
        {
            "co-ban" => "Cơ Bản",
            "trung-binh" => "Trung Bình",
            "nang-cao" => "Nâng Cao",
            "chuyen-gia" => "Chuyên Gia",
            _ => level ?? "Không xác định"
        };
    }

    string GetLevelBadgeClass(string level)
    {
        return level switch
        {
            "co-ban" => "bg-success",
            "trung-binh" => "bg-info",
            "nang-cao" => "bg-warning",
            "chuyen-gia" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetPageUrl(int page)
    {
        var routeValues = new Dictionary<string, object>
        {
            ["page"] = page,
            ["pageSize"] = (int)(ViewBag.PageSize ?? 10)
        };

        // if (!string.IsNullOrEmpty(search))
        //     routeValues["search"] = search;
        // if (!string.IsNullOrEmpty(category))
        //     routeValues["category"] = category;
        // if (!string.IsNullOrEmpty(level))
        //     routeValues["level"] = level;

        return Url.Action("DanhSachKhoaHocSapMo", routeValues);
    }
}


@section Scripts {
    <script>
        $(document).ready(function() {
            // Load statistics
            loadStatistics();

            // Auto submit form when filters change
            $('#category, #level').change(function() {
                $('#searchForm').submit();
            });

            // Search on enter key
            $('#search').keypress(function(e) {
                if (e.which == 13) {
                    $('#searchForm').submit();
                }
            });
        });

        function loadStatistics() {
            $.get('@Url.Action("GetThongKeTongQuan")')
                .done(function(response) {
                    if (response.success && response.data) {
                        $('#pendingStaff').text(response.data.pendingStaff || 0);
                        $('#invitedStaff').text(response.data.invitedStaff || 0);
                        $('#confirmedStaff').text(response.data.confirmedStaff || 0);
                    }
                })
                .fail(function() {
                    console.log('Không thể tải thống kê');
                });
        }
    </script>
}