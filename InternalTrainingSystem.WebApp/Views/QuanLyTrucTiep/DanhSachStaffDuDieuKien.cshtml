@using InternalTrainingSystem.WebApp.Models.DTOs
@model IEnumerable<UserDto>

@{
    ViewData["Title"] = "Danh Sách Nhân Viên Đủ Điều Kiện";
    int courseId = ViewBag.CourseId;
    var course = ViewBag.Course as CourseDto;
    bool isNotificationSent = ViewBag.IsNotificationSent ?? false;
    DateTime? sentAt = ViewBag.SentAt;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
}

@section Styles {
    <link rel="stylesheet" href="~/css/quan-ly-truc-tiep.css" />
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("DanhSachKhoaHocSapMo")">
                    <i class="fas fa-home me-1"></i>
                    Quản Lý Khóa Học
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Mời Nhân Viên Tham Gia
            </li>
        </ol>
    </nav>

    <!-- Course Info Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="course-info-card">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="course-title mb-2">
                            <i class="fas fa-book-open me-2"></i>
                            @course?.Name
                        </h1>
                        <p class="course-description mb-2">@course?.Description</p>
                        <div class="course-meta">
                            <span class="badge bg-primary me-2">@GetCategoryName(course?.Category)</span>
                            <span class="badge @GetLevelBadgeClass(course?.Level) me-2">@GetLevelName(course?.Level)</span>
                            @if (course?.StartDate.HasValue == true)
                            {
                                <span class="text-muted">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    Bắt đầu: @course.StartDate.Value.ToString("dd/MM/yyyy")
                                </span>
                            }
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="notification-status">
                            @if (isNotificationSent)
                            {
                                <div class="alert alert-success mb-0">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <strong>Đã gửi thông báo</strong>
                                    <br>
                                    <small>Vào lúc: @sentAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Chưa gửi thông báo</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="action-buttons">
                @if (!isNotificationSent)
                {
                    <button type="button" 
                            class="btn btn-success me-2" 
                            onclick="confirmSendNotificationToAll()"
                            data-bs-toggle="tooltip" 
                            title="Gửi thông báo cho tất cả nhân viên đủ điều kiện">
                        <i class="fas fa-bell me-1"></i>
                        Gửi Thông Báo Tất Cả
                    </button>
                }
                <button type="button" 
                        class="btn btn-info me-2" 
                        onclick="refreshStaffList()"
                        data-bs-toggle="tooltip" 
                        title="Làm mới danh sách">
                    <i class="fas fa-sync-alt me-1"></i>
                    Làm Mới
                </button>
                <a href="@Url.Action("DanhSachKhoaHocSapMo")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Quay Lại
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card primary">
                <div class="stats-content">
                    <div class="stats-number">@Model.Count()</div>
                    <div class="stats-label">Nhân Viên Đủ Điều Kiện</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card success">
                <div class="stats-content">
                    <div class="stats-number" id="invitedCount">@Model.Count(u => u.IsInvited)</div>
                    <div class="stats-label">Đã Mời</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-paper-plane"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card warning">
                <div class="stats-content">
                    <div class="stats-number" id="pendingCount">@Model.Count(u => !u.IsInvited)</div>
                    <div class="stats-label">Chưa Mời</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-clock"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stats-card info">
                <div class="stats-content">
                    <div class="stats-number" id="confirmedCount">@Model.Count(u => u.HasConfirmed)</div>
                    <div class="stats-label">Đã Xác Nhận</div>
                </div>
                <div class="stats-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Staff List -->
    <div class="row">
        <div class="col-12">
            <div class="staff-list-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>
                        Danh Sách Nhân Viên Đủ Điều Kiện
                    </h5>
                    <div class="card-tools">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAll()">
                                <i class="fas fa-check-square me-1"></i>
                                Chọn Tất Cả
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="deselectAll()">
                                <i class="fas fa-square me-1"></i>
                                Bỏ Chọn
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="50">
                                            <input type="checkbox" id="selectAllCheckbox" class="form-check-input">
                                        </th>
                                        <th>STT</th>
                                        <th>Thông Tin Nhân Viên</th>
                                        <th>Phòng Ban</th>
                                        <th>Chức Vụ</th>
                                        <th>Kinh Nghiệm</th>
                                        <th class="text-center">Trạng Thái</th>
                                        <th class="text-center">Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = (currentPage - 1) * pageSize + 1;
                                    }
                                    @foreach (var staff in Model)
                                    {
                                        <tr data-staff-id="@staff.Id" class="@(staff.IsInvited ? "table-success" : "")">
                                            <td>
                                                <input type="checkbox" 
                                                       class="form-check-input staff-checkbox" 
                                                       value="@staff.Id"
                                                       @(staff.IsInvited ? "disabled" : "")>
                                            </td>
                                            <td>@index</td>
                                            <td>
                                                <div class="staff-info">
                                                    <div class="staff-avatar">
                                                        @if (!string.IsNullOrEmpty(staff.Avatar))
                                                        {
                                                            <img src="@staff.Avatar" alt="@staff.FullName" class="avatar-img">
                                                        }
                                                        else
                                                        {
                                                            <div class="avatar-placeholder">
                                                                @staff.FullName?.Substring(0, 1).ToUpper()
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="staff-details">
                                                        <strong>@staff.FullName</strong>
                                                        <div class="text-muted small">
                                                            <i class="fas fa-envelope me-1"></i>
                                                            @staff.Email
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(staff.PhoneNumber))
                                                        {
                                                            <div class="text-muted small">
                                                                <i class="fas fa-phone me-1"></i>
                                                                @staff.PhoneNumber
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@(staff.Department ?? "N/A")</span>
                                            </td>
                                            <td>@(staff.Position ?? "N/A")</td>
                                            <td>
                                                @if (staff.YearsOfExperience.HasValue)
                                                {
                                                    <span class="badge bg-primary">@staff.YearsOfExperience năm</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (staff.HasConfirmed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>
                                                        Đã Xác Nhận
                                                    </span>
                                                }
                                                else if (staff.IsInvited)
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-clock me-1"></i>
                                                        Đang Chờ
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-user-plus me-1"></i>
                                                        Chưa Mời
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (!staff.IsInvited)
                                                {
                                                    <button type="button" 
                                                            class="btn btn-primary btn-sm invite-btn" 
                                                            onclick="inviteStaff(@staff.Id, '@staff.FullName')"
                                                            title="Mời tham gia khóa học">
                                                        <i class="fas fa-paper-plane"></i>
                                                        Mời
                                                    </button>
                                                }
                                                else if (staff.HasConfirmed)
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-check-circle"></i>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <button type="button" 
                                                            class="btn btn-outline-warning btn-sm" 
                                                            onclick="resendInvitation(@staff.Id, '@staff.FullName')"
                                                            title="Gửi lại lời mời">
                                                        <i class="fas fa-redo"></i>
                                                        Gửi Lại
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Bulk Actions -->
                        <div class="bulk-actions p-3 border-top">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <span id="selectedCount" class="text-muted">0 nhân viên được chọn</span>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    <button type="button" 
                                            class="btn btn-success" 
                                            id="bulkInviteBtn" 
                                            onclick="bulkInviteStaff()" 
                                            style="display: none;">
                                        <i class="fas fa-paper-plane me-1"></i>
                                        Mời Các Nhân Viên Đã Chọn
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-users-slash"></i>
                            </div>
                            <h5 class="empty-state-title">Không có nhân viên đủ điều kiện</h5>
                            <p class="empty-state-text">
                                Hiện tại chưa có nhân viên nào đủ điều kiện tham gia khóa học này.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Phân trang nhân viên">
                    <ul class="pagination justify-content-center">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetPageUrl(currentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                    Trước
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(currentPage + 2, 10); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="@GetPageUrl(i)">@i</a>
                            </li>
                        }

                        @if (currentPage < 10)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetPageUrl(currentPage + 1)">
                                    Sau
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

@functions {
    string GetCategoryName(string category)
    {
        return category switch
        {
            "lap-trinh" => "Lập Trình",
            "quan-ly" => "Quản Lý",
            "ky-nang-mem" => "Kỹ Năng Mềm",
            "ngoai-ngu" => "Ngoại Ngữ",
            "cong-nghe" => "Công Nghệ",
            _ => category ?? "Không xác định"
        };
    }

    string GetLevelName(string level)
    {
        return level switch
        {
            "co-ban" => "Cơ Bản",
            "trung-binh" => "Trung Bình",
            "nang-cao" => "Nâng Cao",
            "chuyen-gia" => "Chuyên Gia",
            _ => level ?? "Không xác định"
        };
    }

    string GetLevelBadgeClass(string level)
    {
        return level switch
        {
            "co-ban" => "bg-success",
            "trung-binh" => "bg-info",
            "nang-cao" => "bg-warning",
            "chuyen-gia" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetPageUrl(int page)
    {
        return Url.Action("DanhSachStaffDuDieuKien", new { courseId = (int)ViewBag.CourseId, page, pageSize = (int)(ViewBag.PageSize ?? 10) });
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Update selected count
            updateSelectedCount();
            
            // Handle checkbox changes
            $('.staff-checkbox').change(function() {
                updateSelectedCount();
            });
            
            // Handle select all checkbox
            $('#selectAllCheckbox').change(function() {
                if (this.checked) {
                    selectAll();
                } else {
                    deselectAll();
                }
            });
        });

        function updateSelectedCount() {
            const selectedCount = $('.staff-checkbox:checked:not(:disabled)').length;
            $('#selectedCount').text(selectedCount + ' nhân viên được chọn');
            
            if (selectedCount > 0) {
                $('#bulkInviteBtn').show();
            } else {
                $('#bulkInviteBtn').hide();
            }
            
            // Update select all checkbox state
            const totalCheckboxes = $('.staff-checkbox:not(:disabled)').length;
            const selectAllCheckbox = $('#selectAllCheckbox')[0];
            if (selectedCount === 0) {
                selectAllCheckbox.indeterminate = false;
                selectAllCheckbox.checked = false;
            } else if (selectedCount === totalCheckboxes) {
                selectAllCheckbox.indeterminate = false;
                selectAllCheckbox.checked = true;
            } else {
                selectAllCheckbox.indeterminate = true;
            }
        }

        function selectAll() {
            $('.staff-checkbox:not(:disabled)').prop('checked', true);
            updateSelectedCount();
        }

        function deselectAll() {
            $('.staff-checkbox').prop('checked', false);
            updateSelectedCount();
        }

        function inviteStaff(staffId, staffName) {
            if (confirm(`Bạn có chắc chắn muốn mời ${staffName} tham gia khóa học này?`)) {
                showLoading();
                
                $.post('@Url.Action("MoiStaffThamGia")', {
                    courseId: @courseId,
                    staffId: staffId
                })
                .done(function(response) {
                    hideLoading();
                    location.reload();
                })
                .fail(function() {
                    hideLoading();
                    alert('Có lỗi xảy ra khi gửi lời mời. Vui lòng thử lại.');
                });
            }
        }

        function resendInvitation(staffId, staffName) {
            if (confirm(`Bạn có chắc chắn muốn gửi lại lời mời cho ${staffName}?`)) {
                inviteStaff(staffId, staffName);
            }
        }

        function bulkInviteStaff() {
            const selectedStaff = $('.staff-checkbox:checked:not(:disabled)');
            if (selectedStaff.length === 0) {
                alert('Vui lòng chọn ít nhất một nhân viên.');
                return;
            }

            if (confirm(`Bạn có chắc chắn muốn mời ${selectedStaff.length} nhân viên đã chọn tham gia khóa học này?`)) {
                showLoading();
                
                const promises = selectedStaff.map(function() {
                    const staffId = $(this).val();
                    return $.post('@Url.Action("MoiStaffThamGia")', {
                        courseId: @courseId,
                        staffId: staffId
                    });
                }).get();

                Promise.all(promises)
                    .then(function() {
                        hideLoading();
                        location.reload();
                    })
                    .catch(function() {
                        hideLoading();
                        alert('Có lỗi xảy ra khi gửi lời mời. Vui lòng thử lại.');
                    });
            }
        }

        function confirmSendNotificationToAll() {
            if (confirm('Bạn có chắc chắn muốn gửi thông báo cho tất cả nhân viên đủ điều kiện? Hành động này không thể hoàn tác.')) {
                showLoading();
                
                $.post('@Url.Action("GuiThongBaoTatCaStaff")', {
                    courseId: @courseId
                })
                .done(function(response) {
                    hideLoading();
                    location.reload();
                })
                .fail(function() {
                    hideLoading();
                    alert('Có lỗi xảy ra khi gửi thông báo. Vui lòng thử lại.');
                });
            }
        }

        function refreshStaffList() {
            location.reload();
        }

        function showLoading() {
            // Show loading spinner or disable buttons
            $('button').prop('disabled', true);
        }

        function hideLoading() {
            // Hide loading spinner and enable buttons
            $('button').prop('disabled', false);
        }
    </script>
}