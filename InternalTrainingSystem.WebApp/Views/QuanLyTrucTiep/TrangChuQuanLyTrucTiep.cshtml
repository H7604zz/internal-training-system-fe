@{
    ViewData["Title"] = "Trang Chủ Quản Lý";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-manager">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Dashboard Quản Lý</h4>
            <p class="text-muted mb-0">Chào mừng trở lại, <strong>Nguyễn Văn A</strong></p>
        </div>
        <div class="date-display">
            <span class="today-date"></span>
        </div>
    </div>

    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold mb-0">📘 Khóa học sắp khai giảng</h5>
            <div class="filter d-flex gap-2">
                <select class="form-select form-select-sm">
                    <option selected>Tất cả tháng</option>
                    <option>Tháng 10/2025</option>
                    <option>Tháng 11/2025</option>
                </select>
                <select class="form-select form-select-sm">
                    <option selected>Tất cả phòng ban</option>
                    <option>Kinh doanh</option>
                    <option>Nhân sự</option>
                    <option>Kỹ thuật</option>
                </select>
            </div>
        </div>

        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Tên khóa học</th>
                    <th>Ngày khai giảng</th>
                    <th>Số học viên dự kiến</th>
                    <th>Phòng ban áp dụng</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Lập trình Web cơ bản</td>
                    <td>15/10/2025</td>
                    <td>25</td>
                    <td><span class="department">Kỹ thuật</span>, <span class="department">Thực tập sinh</span></td>
                    <td class="text-center">
                        <a href="/QuanLyTrucTiep/ChiTietKhoaHoc/1" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
                <tr>
                    <td>Phân tích dữ liệu với Python</td>
                    <td>25/10/2025</td>
                    <td>30</td>
                    <td><span class="department">Phân tích</span>, <span class="department">Kỹ thuật</span></td>
                    <td class="text-center">
                        <a href="/QuanLyTrucTiep/ChiTietKhoaHoc/2" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
                <tr>
                    <td>Kỹ năng quản lý nhóm</td>
                    <td>01/11/2025</td>
                    <td>20</td>
                    <td><span class="department">Nhân sự</span>, <span class="department">Kinh doanh</span></td>
                    <td class="text-center">
                        <a href="/QuanLyTrucTiep/ChiTietKhoaHoc/3" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/trangchuquanlytructiep.css?v=@DateTime.Now.Ticks" asp-append-version="true" />
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const todayDate = document.querySelector('.today-date');
            const currentDate = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            todayDate.textContent = currentDate.toLocaleDateString('vi-VN', options);
        });
    </script>
}
